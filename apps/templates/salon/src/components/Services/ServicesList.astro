---
/**
 * MenuList - Variante elegante con lista vertical
 * Ideal para: Fine Dining, restaurantes elegantes
 */
interface MenuItem {
  name: string;
  description: string;
  price: string;
  tag?: string;
  image?: string;
}

interface MenuCategory {
  name: string;
  icon: string;
  items: MenuItem[];
}

interface Props {
  title?: string;
  subtitle?: string;
  categories?: MenuCategory[];
}

const {
  title = "Nuestros Servicios",
  subtitle = "Cortes, color y tratamientos a tu medida",
  categories = [],
} = Astro.props;

const hasServices = categories && categories.length > 0;
---

<section id="services" class="menu-list-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="section-label">Servicios</span>
      <h2 class="section-title">{title}</h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>

    {hasServices ? (
      <!-- Menu Categories -->
      <div class="menu-categories">
        {categories.map((category, catIndex) => (
          <div class="menu-category">
            <div class="category-header">
              <span class="category-icon" set:html={category.icon} />
              <h3 class="category-name">{category.name}</h3>
              <span class="category-line"></span>
            </div>

            <div class="category-items">
              {category.items.map((item, itemIndex) => (
                <article class="menu-item" style={`animation-delay: ${(catIndex * 3 + itemIndex) * 100}ms`}>
                  <div class="item-info">
                    <div class="item-header">
                      <h4 class="item-name">{item.name}</h4>
                      <span class="item-dots"></span>
                      <span class="item-price">â‚¬{item.price}</span>
                    </div>
                    <p class="item-description">{item.description}</p>
                    {item.tag && <span class={`item-tag tag-${item.tag}`}>{item.tag}</span>}
                  </div>
                </article>
              ))}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="empty-state neumor-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="empty-icon">
          <circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/>
          <line x1="20" y1="4" x2="8.12" y2="15.88"/>
          <line x1="14.47" y1="14.48" x2="20" y2="20"/>
        </svg>
        <p class="empty-text">Los servicios se configuraran proximamente</p>
      </div>
    )}
  </div>
</section>

<style>
  .menu-list-section {
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  /* Empty State */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    border-radius: 1.5rem;
  }

  .empty-icon {
    width: 64px;
    height: 64px;
    color: var(--text-secondary);
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .empty-text {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .section-label {
    display: inline-block;
    font-size: 0.75rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 300;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    max-width: 400px;
    margin: 0 auto;
    font-weight: 300;
  }

  /* Categories */
  .menu-categories {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .category-icon {
    width: 28px;
    height: 28px;
    color: var(--accent);
    display: flex;
  }

  .category-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .category-name {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text-primary);
    white-space: nowrap;
  }

  .category-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, var(--shadow-dark), transparent);
  }

  /* Items */
  .category-items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .menu-item {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  .item-header {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .item-name {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-primary);
    margin: 0;
  }

  .item-dots {
    flex: 1;
    border-bottom: 1px dotted var(--shadow-dark);
    margin: 0 0.5rem;
    min-width: 20px;
  }

  .item-price {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--accent);
    white-space: nowrap;
  }

  .item-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    padding-left: 0;
  }

  .item-tag {
    display: inline-block;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    margin-top: 0.5rem;
  }

  .tag-popular {
    background: rgba(245, 158, 11, 0.15);
    color: #d97706;
  }

  .tag-nuevo {
    background: rgba(16, 185, 129, 0.15);
    color: #059669;
  }

  .tag-vegano {
    background: rgba(34, 197, 94, 0.15);
    color: #16a34a;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .menu-list-section {
      padding: 4rem 0;
    }

    .menu-categories {
      gap: 3rem;
    }

    .item-dots {
      display: none;
    }

    .item-header {
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .item-price {
      margin-left: auto;
    }
  }
</style>
