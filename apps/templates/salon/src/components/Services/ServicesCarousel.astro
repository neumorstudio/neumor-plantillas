---
/**
 * MenuCarousel - Variante con scroll horizontal
 * Ideal para: Fast Food, restaurantes visuales
 */
interface MenuItem {
  name: string;
  description: string;
  price: string;
  tag?: string;
  image?: string;
}

interface MenuCategory {
  name: string;
  icon: string;
  items: MenuItem[];
}

interface Props {
  title?: string;
  subtitle?: string;
  categories?: MenuCategory[];
}

const {
  title = "Nuestros Servicios",
  subtitle = "Desliza para ver todas las opciones",
  categories = [],
} = Astro.props;

const hasServices = categories && categories.length > 0;
---

<section id="services" class="menu-carousel-section">
  <div class="section-header">
    <div class="container">
      <h2 class="section-title">{title}</h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>
  </div>

  {hasServices ? (
    categories.map((category) => (
      <div class="menu-category">
        <div class="container">
          <div class="category-header">
            <span class="category-icon" set:html={category.icon} />
            <h3 class="category-name">{category.name}</h3>
          </div>
        </div>

        <div class="carousel-wrapper">
          <div class="carousel-track">
            {category.items.map((item) => (
              <article class="menu-card neumor-card">
                {item.image && (
                  <div class="card-image">
                    <img src={item.image} alt={item.name} loading="lazy" />
                    {item.tag && <span class={`card-tag tag-${item.tag}`}>{item.tag}</span>}
                  </div>
                )}
                <div class="card-content">
                  <h4 class="card-title">{item.name}</h4>
                  <p class="card-description">{item.description}</p>
                  <div class="card-footer">
                    <span class="card-price">â‚¬{item.price}</span>
                    <button class="card-btn">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 5v14M5 12h14"/>
                      </svg>
                    </button>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    ))
  ) : (
    <div class="container">
      <div class="empty-state neumor-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="empty-icon">
          <circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/>
          <line x1="20" y1="4" x2="8.12" y2="15.88"/>
          <line x1="14.47" y1="14.48" x2="20" y2="20"/>
        </svg>
        <p class="empty-text">Los servicios se configuraran proximamente</p>
      </div>
    </div>
  )}
</section>

<style>
  .menu-carousel-section {
    padding: 6rem 0;
    overflow: hidden;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  /* Empty State */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    border-radius: 1.5rem;
  }

  .empty-icon {
    width: 64px;
    height: 64px;
    color: var(--text-secondary);
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .empty-text {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .section-subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  /* Category */
  .menu-category {
    margin-bottom: 3rem;
  }

  .menu-category:last-child {
    margin-bottom: 0;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .category-icon {
    width: 24px;
    height: 24px;
    color: var(--accent);
    display: flex;
  }

  .category-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .category-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  /* Carousel */
  .carousel-wrapper {
    overflow-x: auto;
    overflow-y: visible;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding: 1rem 0;
  }

  .carousel-wrapper::-webkit-scrollbar {
    display: none;
  }

  .carousel-track {
    display: flex;
    gap: 1.5rem;
    padding: 0 max(1.5rem, calc((100vw - 1200px) / 2 + 1.5rem));
  }

  /* Card */
  .menu-card {
    flex: 0 0 280px;
    scroll-snap-align: start;
    padding: 0;
    border-radius: 1.5rem;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .menu-card:hover {
    transform: translateY(-8px) scale(1.02);
  }

  .card-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .menu-card:hover .card-image img {
    transform: scale(1.1);
  }

  .card-tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: 0.35rem 0.75rem;
    border-radius: 2rem;
  }

  .tag-popular {
    background: #f59e0b;
    color: white;
  }

  .tag-nuevo {
    background: #10b981;
    color: white;
  }

  .tag-vegano {
    background: #22c55e;
    color: white;
  }

  .card-content {
    padding: 1.25rem;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .card-description {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0 0 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--accent);
  }

  .card-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: var(--accent);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .card-btn svg {
    width: 20px;
    height: 20px;
  }

  .card-btn:hover {
    transform: scale(1.1);
    background: var(--accent-hover);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .menu-carousel-section {
      padding: 4rem 0;
    }

    .menu-card {
      flex: 0 0 260px;
    }
  }
</style>
