---
/**
 * MenuGrid - Variante grid simple sin tabs
 * Ideal para: Casual, menus pequenos
 */
interface MenuItem {
  name: string;
  description: string;
  price: string;
  tag?: string;
  image?: string;
}

interface MenuCategory {
  name: string;
  icon: string;
  items: MenuItem[];
}

interface Props {
  title?: string;
  subtitle?: string;
  categories?: MenuCategory[];
}

const {
  title = "Nuestros Servicios",
  subtitle = "Cortes, color y tratamientos a tu medida",
  categories = [],
} = Astro.props;

const hasServices = categories && categories.length > 0;

// Flatten all items
const allItems = categories.flatMap(cat =>
  cat.items.map(item => ({ ...item, category: cat.name }))
);
---

<section id="services" class="menu-grid-section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>

    {hasServices ? (
      <!-- Menu Grid -->
      <div class="menu-grid">
        {allItems.map((item, index) => (
          <article class="menu-item neumor-card" style={`animation-delay: ${index * 50}ms`}>
            <div class="item-top">
              <span class="item-category">{item.category}</span>
              {item.tag && <span class={`item-tag tag-${item.tag}`}>{item.tag}</span>}
            </div>
            <h3 class="item-name">{item.name}</h3>
            <p class="item-description">{item.description}</p>
            <div class="item-price">
              <span class="price-currency">â‚¬</span>
              <span class="price-value">{item.price}</span>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state neumor-card">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="empty-icon">
          <circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/>
          <line x1="20" y1="4" x2="8.12" y2="15.88"/>
          <line x1="14.47" y1="14.48" x2="20" y2="20"/>
        </svg>
        <p class="empty-text">Los servicios se configuraran proximamente</p>
      </div>
    )}
  </div>
</section>

<style>
  .menu-grid-section {
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  /* Empty State */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    border-radius: 1.5rem;
  }

  .empty-icon {
    width: 64px;
    height: 64px;
    color: var(--text-secondary);
    opacity: 0.5;
    margin-bottom: 1rem;
  }

  .empty-text {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 500px;
    margin: 0 auto;
  }

  /* Grid */
  .menu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  /* Item */
  .menu-item {
    padding: 1.5rem;
    border-radius: 1.25rem;
    display: flex;
    flex-direction: column;
    opacity: 0;
    animation: slideUp 0.5s ease forwards;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .item-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .item-category {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent);
    font-weight: 600;
  }

  .item-tag {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.2rem 0.6rem;
    border-radius: 2rem;
  }

  .tag-popular {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    color: white;
  }

  .tag-nuevo {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
  }

  .tag-vegano {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
  }

  .item-name {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .item-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin: 0;
    flex: 1;
  }

  .item-price {
    display: inline-flex;
    align-items: baseline;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 0.75rem;
    background: var(--neumor-bg);
    box-shadow:
      inset 3px 3px 6px var(--shadow-dark),
      inset -3px -3px 6px var(--shadow-light);
    align-self: flex-start;
  }

  .price-currency {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--accent);
    margin-right: 2px;
  }

  .price-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .menu-grid-section {
      padding: 4rem 0;
    }

    .menu-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
