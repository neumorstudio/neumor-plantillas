---
interface Props {
  title?: string;
  subtitle?: string;
  address?: string;
  phone?: string;
  email?: string;
  mapUrl?: string;
}

const {
  title = "Contacto",
  subtitle = "Estamos aquí para ayudarte",
  address = "",
  phone = "",
  email = "",
  mapUrl = "",
} = Astro.props;
---

<section id="contact" class="section">
  <div class="container">
    <div class="contact-header">
      <h2>{title}</h2>
      <p>{subtitle}</p>
    </div>
    <div class="contact-grid">
      <div class="contact-info neumor-card">
        {address && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Dirección</span>
              <span class="contact-value">{address}</span>
            </div>
          </div>
        )}
        {phone && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Teléfono</span>
              <a href={`tel:${phone}`} class="contact-value">{phone}</a>
            </div>
          </div>
        )}
        {email && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Email</span>
              <a href={`mailto:${email}`} class="contact-value">{email}</a>
            </div>
          </div>
        )}
      </div>
      {!address && !phone && !email && (
        <div class="contact-placeholder neumor-card">
          <p>Configura tus datos de contacto en el panel de administración.</p>
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-header h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .contact-header p {
    font-size: 1.05rem;
    color: var(--text-secondary);
    max-width: 520px;
    margin: 0 auto;
  }

  .contact-grid {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-info {
    padding: 2rem;
    border-radius: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .contact-icon {
    width: 48px;
    height: 48px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    flex-shrink: 0;
  }

  .contact-icon svg {
    width: 24px;
    height: 24px;
  }

  .contact-text {
    display: flex;
    flex-direction: column;
  }

  .contact-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  .contact-value {
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
  }

  .contact-value:hover {
    color: var(--accent);
  }

  .contact-placeholder {
    padding: 3rem 2rem;
    text-align: center;
    border-radius: 1.25rem;
  }

  .contact-placeholder p {
    color: var(--text-secondary);
    margin: 0;
  }
</style>
