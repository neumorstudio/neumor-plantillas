---
interface Props {
  title?: string;
  subtitle?: string;
  images?: string[];
  variant?: "masonry" | "grid" | "carousel";
}

const defaultImages = [
  "https://images.unsplash.com/photo-1560066984-138dadb4c035?w=600&q=80",
  "https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?w=600&q=80",
  "https://images.unsplash.com/photo-1521590832167-7bcbfaa6381f?w=600&q=80",
  "https://images.unsplash.com/photo-1633681926035-ec1ac984418a?w=600&q=80",
  "https://images.unsplash.com/photo-1595476108010-b4d1f102b1b1?w=600&q=80",
  "https://images.unsplash.com/photo-1562322140-8baeececf3df?w=600&q=80",
];

const {
  title = "Nuestra Galer√≠a",
  subtitle = "Descubre nuestro trabajo",
  images = defaultImages,
  variant = "masonry",
} = Astro.props;
---

<section id="gallery" class={`section gallery-variant-${variant}`}>
  <div class="container">
    <div class="gallery-header">
      <h2 data-content="galleryTitle">{title}</h2>
      <p data-content="gallerySubtitle">{subtitle}</p>
    </div>
    {variant === "carousel" ? (
      <div class="gallery-carousel" data-gallery-carousel>
        <button class="gallery-nav gallery-nav-prev" type="button" aria-label="Anterior" data-gallery-prev>
          &lsaquo;
        </button>
        <div class="gallery-grid" data-gallery-track>
          {images.map((image, index) => (
            <div class="gallery-item neumor-card" style={`animation-delay: ${index * 100}ms`}>
              <img src={image} alt={`Galeria imagen ${index + 1}`} loading="lazy" />
            </div>
          ))}
        </div>
        <button class="gallery-nav gallery-nav-next" type="button" aria-label="Siguiente" data-gallery-next>
          &rsaquo;
        </button>
      </div>
    ) : (
      <div class="gallery-grid">
        {images.map((image, index) => (
          <div class="gallery-item neumor-card" style={`animation-delay: ${index * 100}ms`}>
            <img src={image} alt={`Galeria imagen ${index + 1}`} loading="lazy" />
          </div>
        ))}
      </div>
    )}
  </div>
</section>

{
  variant === "carousel" && (
    <script>
      {`
        const section = document.getElementById("gallery");
        if (section) {
          const root = section.querySelector("[data-gallery-carousel]");
          const track = section.querySelector("[data-gallery-track]");
          const prevBtn = section.querySelector("[data-gallery-prev]");
          const nextBtn = section.querySelector("[data-gallery-next]");
          if (root && track && prevBtn && nextBtn) {
            const getStep = () => {
              const firstItem = track.querySelector(".gallery-item");
              if (!firstItem) return Math.max(240, track.clientWidth * 0.8);
              const trackStyles = window.getComputedStyle(track);
              const itemWidth = firstItem.getBoundingClientRect().width;
              const gap = parseFloat(trackStyles.columnGap || trackStyles.gap || "0") || 0;
              return itemWidth + gap;
            };
            const updateNav = () => {
              const max = track.scrollWidth - track.clientWidth;
              prevBtn.disabled = track.scrollLeft <= 0;
              nextBtn.disabled = track.scrollLeft >= max - 1;
            };
            const scrollToPos = (delta) => {
              const max = track.scrollWidth - track.clientWidth;
              const next = Math.max(0, Math.min(max, track.scrollLeft + delta));
              track.scrollTo({ left: next, behavior: "smooth" });
            };
            prevBtn.addEventListener("click", () => {
              scrollToPos(-getStep());
            });
            nextBtn.addEventListener("click", () => {
              scrollToPos(getStep());
            });
            track.addEventListener("scroll", updateNav);
            window.addEventListener("resize", updateNav);
            requestAnimationFrame(updateNav);
          }
        }
      `}
    </script>
  )
}

<style>
  .gallery-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .gallery-header h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .gallery-header p {
    font-size: 1.05rem;
    color: var(--text-secondary);
    max-width: 520px;
    margin: 0 auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .gallery-item {
    padding: 0;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 4/3;
    animation: fadeInUp 0.5s ease backwards;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  /* Variantes */
  .gallery-variant-masonry .gallery-grid {
    column-count: 3;
    column-gap: 1.5rem;
    display: block;
  }

  .gallery-variant-masonry .gallery-item {
    break-inside: avoid;
    margin-bottom: 1.5rem;
    aspect-ratio: auto;
  }

  .gallery-variant-carousel .gallery-grid {
    display: flex;
    gap: 1.25rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding-bottom: 0.5rem;
  }

  .gallery-variant-carousel .gallery-item {
    min-width: 260px;
    flex: 0 0 auto;
    scroll-snap-align: start;
  }

  .gallery-carousel {
    position: relative;
  }

  .gallery-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid rgba(15, 23, 42, 0.15);
    background: rgba(255, 255, 255, 0.92);
    color: var(--text-primary);
    font-size: 24px;
    line-height: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 6px 16px rgba(15, 23, 42, 0.15);
    transition: transform 0.2s ease, opacity 0.2s ease;
    z-index: 2;
  }

  .gallery-nav:disabled {
    opacity: 0.4;
    cursor: default;
  }

  .gallery-nav:hover:not(:disabled) {
    transform: translateY(-50%) scale(1.05);
  }

  .gallery-nav-prev {
    left: -12px;
  }

  .gallery-nav-next {
    right: -12px;
  }

  @media (max-width: 1024px) {
    .gallery-variant-masonry .gallery-grid {
      column-count: 2;
    }
  }

  @media (max-width: 640px) {
    .gallery-variant-masonry .gallery-grid {
      column-count: 1;
    }

    .gallery-nav {
      width: 34px;
      height: 34px;
      font-size: 20px;
    }

    .gallery-nav-prev {
      left: -8px;
    }

    .gallery-nav-next {
      right: -8px;
    }
  }
</style>