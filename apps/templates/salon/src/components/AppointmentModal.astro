<script>
  // Script handles modal state and booking logic
  // Similar to AppointmentForm.astro but adapted for modal UI
  (function() {
    const modal = document.getElementById('booking-modal');
    const form = document.getElementById('booking-modal-form') as HTMLFormElement;
    if (!modal || !form) return;

    let currentStep = 1;
    const panels = form.querySelectorAll('.step-panel');
    const state = {
      services: [] as any[],
      date: '',
      time: '',
      professionalId: '',
    };

    // Shared references from AppointmentForm logic
    const websiteId = form.dataset.websiteId;
    const webhookUrl = form.dataset.webhook;
    const professionals = JSON.parse(form.dataset.professionals || '[]');
    const businessHours = JSON.parse(form.dataset.businessHours || '[]');
    const businessHourSlots = JSON.parse(form.dataset.businessHourSlots || '[]');
    
    // UI Elements
    const dateGrid = form.querySelector('[data-date-grid]');
    const timeGrid = form.querySelector('[data-time-grid]');
    const summaryServiceDisplay = form.querySelector('[data-summary-service-display]');
    const summaryPriceDisplay = form.querySelector('[data-summary-price-display]');
    const finalDateTimeDisplay = form.querySelector('[data-final-date-time]');
    const finalTotalDisplay = form.querySelector('[data-final-total]');
    const monthLabel = form.querySelector('[data-month-label]');
    
    // Auth Elements
    const authButton = form.querySelector<HTMLButtonElement>("[data-auth-google]");
    const authBlock = form.querySelector<HTMLElement>("[data-auth-block]");
    let currentUserId: string | null = null;
    let currentCustomerId: string | null = null;


    // Modal Control Functions
    const setAuthState = (email?: string | null, userId?: string | null, customerId?: string | null) => {
      currentUserId = userId || null;
      currentCustomerId = customerId || null;
      
      if (authBlock) {
        if (email) {
          authBlock.classList.add("is-authenticated");
          authBlock.style.display = "none";
        } else {
          authBlock.classList.remove("is-authenticated");
          authBlock.style.display = "grid";
        }
      }
    };

    const validateStep = () => {
       if (currentStep === 1) {
         if (!currentUserId) {
            showToast("Debes iniciar sesion con Google para continuar.", "warning");
            authBlock?.scrollIntoView({ behavior: "smooth", block: "center" });
            return false;
         }
         if (state.services.length === 0) {
            showToast("Selecciona al menos un servicio.", "warning");
            return false;
         }
       }
       if (currentStep === 2) {
         if (!state.date || !state.time) {
            showToast("Selecciona fecha y hora.", "warning");
            return false;
         }
       }
       return true;
    };

    const openModal = () => {
      modal.classList.add('is-active');
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      // Auto select first professional if exists
      if (professionals.length > 0 && !state.professionalId) {
        state.professionalId = professionals[0].id;
        (form.querySelector('input[name="professional_id"]') as HTMLInputElement).value = state.professionalId;
      }
      renderStep();
    };

    const closeModal = () => {
      modal.classList.remove('is-active');
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      setTimeout(() => {
        currentStep = 1;
        form.reset();
        state.services = [];
        state.date = '';
        state.time = '';
        renderStep();
      }, 300);
    };

    // Listen for custom open event or direct data-open-modal triggers
    document.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      const closestLink = target.closest('a');
      const isBookingTrigger = target.closest('[data-open-modal="booking"]') || 
                               (closestLink && closestLink.getAttribute('href') === '#appointment');

      if (isBookingTrigger) {
        e.preventDefault();
        openModal();
      }
      if (target.closest('[data-close-modal]')) {
        closeModal();
      }
    });

    // Step Rendering
    const renderStep = () => {
      panels.forEach((panel: any) => {
        panel.classList.toggle('is-active', parseInt(panel.dataset.step) === currentStep);
      });

      if (currentStep === 2) {
        renderDates();
        renderTimes();
      }
      
      updateSummary();
    };

    const updateSummary = () => {
      const totalPrice = state.services.reduce((sum, s) => sum + s.price, 0);
      const priceText = `${(totalPrice / 100).toFixed(2)} €`;
      const priceTextWithPlus = `${(totalPrice / 100).toFixed(2)} €+`;

      // Fancy Summary updates (Step 2)
      const fancyServiceName = form.querySelector('[data-summary-service-name]');
      const fancyTimeRange = form.querySelector('[data-summary-time-range]');
      const fancyPriceValue = form.querySelector('[data-summary-price-value]');
      const fancyTotalDisplay = form.querySelector('[data-final-total-display]');

      if (fancyServiceName) {
        fancyServiceName.textContent = state.services.length > 0 
          ? state.services.map(s => s.name).join(", ") 
          : 'Selecciona un servicio';
      }
      if (fancyTimeRange) {
        fancyTimeRange.textContent = state.time ? `${state.time} - ...` : 'Esperando hora';
      }
      if (fancyPriceValue) fancyPriceValue.textContent = priceText;
      if (fancyTotalDisplay) fancyTotalDisplay.textContent = priceTextWithPlus;

      // Original / Final Summary updates
      if (summaryServiceDisplay) {
        summaryServiceDisplay.innerHTML = `
          <strong>${state.services.length > 0 ? state.services[0].name : 'Por definir'}</strong>
          <span>${state.services.length > 1 ? `+${state.services.length - 1} más` : state.time || 'Esperando hora'}</span>
        `;
      }
      if (summaryPriceDisplay) summaryPriceDisplay.textContent = priceText;
      
      if (finalDateTimeDisplay) finalDateTimeDisplay.textContent = `${state.date} - ${state.time || '--:--'}`;
      if (finalTotalDisplay) finalTotalDisplay.textContent = priceText;

      // Enable/Disable continue buttons
      const nextBtn = form.querySelector(`.step-panel[data-step="${currentStep}"] [data-next-step]`) as HTMLButtonElement;
      if (nextBtn) {
        if (currentStep === 1) nextBtn.disabled = state.services.length === 0;
        if (currentStep === 2) nextBtn.disabled = !state.date || !state.time;
      }
    };

    // Date Rendering (Horizontal)
    const renderDates = () => {
      if (!dateGrid) return;
      dateGrid.innerHTML = '';
      
      const today = new Date();
      const monthNames = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"];
      const dayNames = ["Dom", "Lun", "Mar", "Mié", "Jue", "Vie", "Sáb"];
      
      if (monthLabel) monthLabel.textContent = `${monthNames[today.getMonth()]} ${today.getFullYear()}`;

      // Render next 21 days
      for (let i = 0; i < 21; i++) {
        const date = new Date();
        date.setDate(today.getDate() + i);
        const isoDate = date.toISOString().split('T')[0];
        const isSelected = state.date === isoDate;
        if (i === 0 && !state.date) {
            state.date = isoDate;
            (form.querySelector('input[name="date"]') as HTMLInputElement).value = isoDate;
        }

        const card = document.createElement('div');
        card.className = `date-card ${state.date === isoDate ? 'is-active' : ''}`;
        card.innerHTML = `
          <span class="day-name">${dayNames[date.getDay()]}</span>
          <span class="day-number">${date.getDate()}</span>
          <div class="month-dot"></div>
        `;
        
        card.onclick = () => {
          state.date = isoDate;
          (form.querySelector('input[name="date"]') as HTMLInputElement).value = isoDate;
          state.time = '';
          (form.querySelector('input[name="time"]') as HTMLInputElement).value = '';
          renderDates();
          renderTimes();
          updateSummary();
        };
        dateGrid.appendChild(card);
      }
    };

    // Time Rendering
    const renderTimes = () => {
      if (!timeGrid) return;
      timeGrid.innerHTML = '';
      
      // Basic mock for slots since we don't have the async fetcher here for brevity
      // In production, this would use the same `getAvailableSlotsForDate` from AppointmentForm
      const slots = ["09:00", "09:30", "10:00", "10:30", "11:00", "11:30", "12:00", "12:30", "13:00", "16:00", "16:30", "17:00", "17:30", "18:00", "18:30", "19:00", "19:30", "20:00"];
      
      // Filter logic (simplified)
      const currentFilter = form.querySelector('.filter-btn.is-active')?.getAttribute('data-filter') || 'all';
      
      slots.forEach(slot => {
        const hour = parseInt(slot.split(':')[0]);
        let show = true;
        if (currentFilter === 'morning') show = hour < 14;
        if (currentFilter === 'afternoon') show = hour >= 14 && hour < 19;
        if (currentFilter === 'night') show = hour >= 19;
        
        if (!show) return;

        const btn = document.createElement('div');
        btn.className = `time-slot ${state.time === slot ? 'is-active' : ''}`;
        btn.textContent = slot;
        btn.onclick = () => {
          state.time = slot;
          (form.querySelector('input[name="time"]') as HTMLInputElement).value = slot;
          renderTimes();
          updateSummary();
        };
        timeGrid.appendChild(btn);
      });
    };

    // Event Listeners for steps
    form.querySelectorAll('[data-next-step]').forEach(btn => {
      btn.addEventListener('click', () => {
        if (!validateStep()) return;
        currentStep = Math.min(panels.length, currentStep + 1);
        renderStep();
      });
    });

    form.querySelectorAll('[data-prev-step]').forEach(btn => {
      btn.addEventListener('click', () => {
        currentStep = Math.max(1, currentStep - 1);
        renderStep();
      });
    });

    // Handle service selection
    form.querySelectorAll('input[name="services"]').forEach(input => {
      input.addEventListener('change', () => {
        const checked = form.querySelectorAll('input[name="services"]:checked');
        state.services = Array.from(checked).map((i: any) => ({
          id: i.value,
          name: i.dataset.name,
          price: parseInt(i.dataset.price)
        }));
        updateSummary();
      });
    });

    // Filter Buttons
    form.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        form.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('is-active'));
        btn.classList.add('is-active');
        renderTimes();
      });
    });

    const showToast = (message: string, type: 'success' | 'error' | 'warning' = 'success', duration = 3000) => {
      const container = form.querySelector('[data-toast-container]');
      const toast = form.querySelector('[data-toast]');
      const icon = form.querySelector('[data-toast-icon]');
      const msg = form.querySelector('[data-toast-message]');
      if (!toast || !msg || !icon) return;

      toast.className = `toast toast--${type}`;
      msg.textContent = message;
      toast.classList.add('is-visible');

      setTimeout(() => {
        toast.classList.remove('is-visible');
      }, duration);
    };

    // Form Submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const submitBtn = form.querySelector('[data-submit-booking]') as HTMLButtonElement;
      submitBtn.disabled = true;
      submitBtn.textContent = 'Reservando...';

      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      const payload = {
        website_id: websiteId,
        nombre: data.name,
        email: data.email,
        telefono: data.phone,
        servicio: state.services.map(s => s.name).join(", "),
        fecha: data.date,
        hora: data.time,
        notas: data.notes,
        professional_id: state.professionalId,
      };

      try {
        const response = await fetch(webhookUrl || '', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (response.ok) {
           showToast('¡Reserva realizada con éxito! Te contactaremos pronto.', 'success');
           setTimeout(closeModal, 2000);
        } else {
           throw new Error('Fallback to manual contact');
        }
      } catch (error) {
        showToast('Hubo un problema. Por favor, inténtalo de nuevo.', 'error');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Confirmar Cita';
      }
    });


    // Initialize Auth
    const currentUserData = form.dataset.currentUser;
    if (currentUserData) {
      try {
        const user = JSON.parse(currentUserData);
        setAuthState(user.email, user.id, user.customerId);
      } catch (e) {
        setAuthState(null, null, null);
      }
    } else {
      setAuthState(null, null, null);
    }

    // Login Handler
    authButton?.addEventListener("click", () => {
      const returnUrl = encodeURIComponent(window.location.href);
      window.location.href = `/mi-cuenta/auth/google?return_url=${returnUrl}`;
    });

  })();
</script>
