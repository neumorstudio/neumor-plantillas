---
/**
 * FeaturesIcons - Variante con iconos grandes en fila horizontal
 * Ideal para: Fine Dining, restaurantes elegantes
 */
interface Feature {
  icon: string;
  title: string;
  description: string;
  link?: string;
}

interface Props {
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/><line x1="20" y1="4" x2="8.12" y2="15.88"/><line x1="14.47" y1="14.48" x2="20" y2="20"/><line x1="8.12" y1="8.12" x2="12" y2="12"/></svg>`,
    title: "Cortes y Color",
    description: "Cortes, color y tratamientos personalizados para cada estilo.",
    link: "#services",
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 3l1.2 3.2L9 7l-2.8 1.2L5 12l-1.2-3.8L1 7l2.8-.8L5 3z"/><path d="M16 5l1.8 4.6L22 11l-4.2 1.4L16 17l-1.8-4.6L10 11l4.2-1.4L16 5z"/></svg>`,
    title: "Belleza y Estetica",
    description: "Tratamientos faciales, maquillaje y cuidado avanzado.",
    link: "#reviews",
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/><path d="M8 15l2.5 2.5L16 12"/></svg>`,
    title: "Reserva tu Cita",
    description: "Elige fecha y hora en segundos y nosotros confirmamos.",
    link: "#appointment",
  },
];

const { features = defaultFeatures } = Astro.props;
---

<section id="features" class="features-icons">
  <div class="features-container">
    {features.map((feature, index) => (
      <a
        href={feature.link || "#"}
        class="feature-item animate-fade-in-up"
        style={`animation-delay: ${index * 150}ms`}
      >
        <div class="icon-wrapper neumor-raised">
          <Fragment set:html={feature.icon} />
        </div>
        <h3 class="feature-title">{feature.title}</h3>
        <p class="feature-desc">{feature.description}</p>
      </a>
    ))}
  </div>
</section>

<style>
  .features-icons {
    padding: var(--section-padding);
    background: var(--background);
  }

  .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    max-width: 280px;
    transition: transform 0.3s ease;
  }

  .feature-item:hover {
    transform: translateY(-8px);
  }

  .icon-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--accent);
    transition: all 0.3s ease;
  }

  .feature-item:hover .icon-wrapper {
    color: var(--accent-hover, var(--accent));
    transform: scale(1.05);
  }

  .icon-wrapper :global(svg) {
    width: 40px;
    height: 40px;
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .feature-desc {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .features-container {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
    }
  }
</style>
