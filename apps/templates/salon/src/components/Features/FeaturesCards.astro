---
import FeatureCard from "./FeatureCard.astro";

interface Feature {
  icon: string;
  title: string;
  description: string;
  link?: string;
}

interface Props {
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/><line x1="20" y1="4" x2="8.12" y2="15.88"/><line x1="14.47" y1="14.48" x2="20" y2="20"/><line x1="8.12" y1="8.12" x2="12" y2="12"/></svg>`,
    title: "Cortes y Color",
    description: "Cortes, color y tratamientos personalizados para cada estilo.",
    link: "#services",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>`,
    title: "Opiniones Reales",
    description: "Resenas de clientes que confian en nuestro salon.",
    link: "#reviews",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>`,
    title: "Reserva tu Cita",
    description: "Elige fecha y hora en segundos y nosotros confirmamos.",
    link: "#appointment",
  },
];

const { features = defaultFeatures } = Astro.props;
---

<section id="features" class="section">
  <div class="container">
    <div class="grid-cards">
      {
        features.map((feature, index) => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            link={feature.link}
            delay={(index + 1) * 100}
          />
        ))
      }
    </div>
  </div>
</section>
