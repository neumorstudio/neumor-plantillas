---
interface Props {
  businessName: string;
  address?: string;
  phone?: string;
  email?: string;
  socialLinks?: {
    instagram?: string;
    facebook?: string;
    whatsapp?: string;
  };
  schedule?: {
    weekdays?: string;
    saturday?: string;
    sunday?: string;
  };
}

const {
  businessName,
  address = "Calle Principal 123, Madrid",
  phone = "+34 912 345 678",
  email = "info@restaurante.com",
  socialLinks = {},
  schedule = {
    weekdays: "Lunes - Viernes: 10:00 - 20:00",
    saturday: "Sabado: 10:00 - 14:00",
    sunday: "Domingo: Cerrado",
  },
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h3 class="footer-logo">{businessName}</h3>
        <p class="footer-tagline">
          Una experiencia de belleza unica en el corazon de la ciudad.
        </p>
      </div>

      <div class="footer-contact">
        <h4>Contacto</h4>
        <ul>
          <li>{address}</li>
          <li><a href={`tel:${phone.replace(/\s/g, "")}`}>{phone}</a></li>
          <li><a href={`mailto:${email}`}>{email}</a></li>
        </ul>
      </div>

      <div class="footer-hours">
        <h4>Horario</h4>
        <ul>
          {schedule.weekdays && <li>{schedule.weekdays}</li>}
          {schedule.saturday && <li>{schedule.saturday}</li>}
          {schedule.sunday && <li>{schedule.sunday}</li>}
        </ul>
      </div>

      <div class="footer-social">
        <h4>Siguenos</h4>
        <div class="social-links">
          {
            socialLinks.instagram && (
              <a
                href={socialLinks.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link neumor-btn"
                aria-label="Instagram"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                </svg>
              </a>
            )
          }
          {
            socialLinks.facebook && (
              <a
                href={socialLinks.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link neumor-btn"
                aria-label="Facebook"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
                </svg>
              </a>
            )
          }
          {
            socialLinks.whatsapp && (
              <a
                href={socialLinks.whatsapp}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link neumor-btn"
                aria-label="TripAdvisor"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <circle cx="12" cy="12" r="10" />
                  <path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} {businessName}. Todos los derechos reservados.</p>
      <p class="powered-by">
        Desarrollado por <a href="https://neumorstudio.com" target="_blank">NeumorStudio</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    margin-top: 4rem;
    background-color: var(--neumor-bg);
    box-shadow:
      inset 0 8px 16px var(--shadow-dark),
      inset 0 -8px 16px var(--shadow-light);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .footer-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .footer-tagline {
    font-size: 0.95rem;
    color: var(--text-secondary);
  }

  .footer h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer li {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .footer a {
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .footer a:hover {
    color: var(--accent);
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    width: 44px;
    height: 44px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.75rem;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--shadow-dark);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .powered-by a {
    color: var(--accent);
  }

  @media (max-width: 968px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 580px) {
    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>
