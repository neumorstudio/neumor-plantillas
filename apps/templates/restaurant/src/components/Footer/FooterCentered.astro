---
/**
 * FooterCentered - Variante centrada con info apilada
 * Ideal para: Casual, Cafe/Bistro
 */
interface Props {
  restaurantName: string;
  address?: string;
  phone?: string;
  email?: string;
  socialLinks?: {
    instagram?: string;
    facebook?: string;
    tripadvisor?: string;
  };
}

const {
  restaurantName,
  address = "Calle Principal 123, Madrid",
  phone = "+34 912 345 678",
  email = "info@restaurante.com",
  socialLinks = {},
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="footer-centered">
  <div class="container">
    <h3 class="footer-logo" data-content="businessName">{restaurantName}</h3>

    <p class="footer-tagline">Te esperamos para una experiencia unica</p>

    <div class="contact-info">
      <a href={`tel:${phone.replace(/\s/g, "")}`} class="contact-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        <span data-content="phone">{phone}</span>
      </a>
      <a href={`mailto:${email}`} class="contact-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
        <span data-content="email">{email}</span>
      </a>
      <span class="contact-item address">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
        <span data-content="address">{address}</span>
      </span>
    </div>

    <div class="social-links">
      {socialLinks.instagram && (
        <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" class="social-link neumor-btn" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
        </a>
      )}
      {socialLinks.facebook && (
        <a href={socialLinks.facebook} target="_blank" rel="noopener noreferrer" class="social-link neumor-btn" aria-label="Facebook">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
        </a>
      )}
      {socialLinks.tripadvisor && (
        <a href={socialLinks.tripadvisor} target="_blank" rel="noopener noreferrer" class="social-link neumor-btn" aria-label="TripAdvisor">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/></svg>
        </a>
      )}
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} {restaurantName}. Todos los derechos reservados.</p>
      <p class="powered-by">
        Desarrollado por <a href="https://neumorstudio.com" target="_blank">NeumorStudio</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-centered {
    padding: 4rem 0 2rem;
    margin-top: 4rem;
    background: var(--neumor-bg);
    text-align: center;
    box-shadow: inset 0 8px 16px var(--shadow-dark);
  }

  .footer-logo {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .contact-info {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .contact-item:hover {
    color: var(--accent);
  }

  .contact-item.address {
    cursor: default;
  }

  .contact-item svg {
    flex-shrink: 0;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-link {
    width: 48px;
    height: 48px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: var(--accent);
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid var(--shadow-dark);
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .footer-bottom p {
    margin-bottom: 0.25rem;
  }

  .powered-by a {
    color: var(--accent);
    text-decoration: none;
  }

  @media (max-width: 640px) {
    .contact-info {
      flex-direction: column;
      gap: 1rem;
    }

    .contact-item {
      justify-content: center;
    }
  }
</style>
