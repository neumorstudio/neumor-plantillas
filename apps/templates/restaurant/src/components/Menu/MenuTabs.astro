---
interface MenuItem {
  name: string;
  description: string;
  price: string;
  tag?: string; // "nuevo", "popular", "vegano", etc.
  image?: string;
}

interface MenuCategory {
  name: string;
  icon: string;
  items: MenuItem[];
}

