  .form-fields {
    margin-bottom: 1.25rem;
  }

  .form-group {
    margin-bottom: 0.875rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.875rem;
  }

