  .reservation-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .details-card,
  .contact-card {
    padding: 1.5rem;
  }

  .card-title {
    font-size: 1rem;
    margin-bottom: 1.25rem;
    color: var(--text-primary);
  }

