  .summary-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .summary-icon {
    font-size: 1.25rem;
  }

  .summary-value {
    font-weight: 600;
    font-size: 0.875rem;
    text-align: center;
