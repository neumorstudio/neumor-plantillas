<script>
  (function () {
    const wizardForm = document.querySelector('.wizard-form') as HTMLFormElement | null;
    if (!wizardForm) return;

    const calendarDays = wizardForm.querySelector('.calendar-days');
    const monthYearDisplay = wizardForm.querySelector('.calendar-month-year');
    const prevMonthBtn = wizardForm.querySelector('.prev-month');
    const nextMonthBtn = wizardForm.querySelector('.next-month');
    const selectedDateInput = wizardForm.querySelector('#selectedDate') as HTMLInputElement;
    const selectedTimeInput = wizardForm.querySelector('#selectedTime') as HTMLInputElement;
    const timeGrid = wizardForm.querySelector('.time-grid') as HTMLElement | null;
    const guestPills = wizardForm.querySelectorAll('.guest-pill');
    const selectedGuestsInput = wizardForm.querySelector('#selectedGuests') as HTMLInputElement;
    const zoneOptions = wizardForm.querySelectorAll('.zone-option');
    const selectedZoneInput = wizardForm.querySelector('#selectedZone') as HTMLInputElement;
    const occasionOptions = wizardForm.querySelectorAll('.occasion-option');
    const selectedOccasionInput = wizardForm.querySelector('#selectedOccasion') as HTMLInputElement;

    const wizardSteps = document.querySelectorAll('.wizard-step');
    const progressSteps = document.querySelectorAll('.progress-step');
    const progressFill = document.querySelector('.progress-fill');
    const nextBtns = document.querySelectorAll('.next-step');
    const prevBtns = document.querySelectorAll('.prev-step');
    const wizardSuccess = document.querySelector('.wizard-success') as HTMLElement;
    const submitBtn = document.querySelector('.submit-btn') as HTMLButtonElement;
    const newReservationBtn = document.querySelector('.new-reservation');
    const messageBox = document.querySelector('#wizard-message') as HTMLElement | null;

    const showMessage = (text: string, type: 'error' | 'info' = 'error') => {
      if (!messageBox) return;
      messageBox.textContent = text;
      messageBox.classList.remove('error', 'info');
      messageBox.classList.add(type);
      messageBox.removeAttribute('hidden');
      messageBox.scrollIntoView({ behavior: 'smooth', block: 'center' });
    };

    const clearMessage = () => {
      if (!messageBox) return;
      messageBox.textContent = '';
      messageBox.setAttribute('hidden', 'true');
      messageBox.classList.remove('error', 'info');
    };

    const authBlock = wizardForm.querySelector('[data-auth-block]');
    const authButton = wizardForm.querySelector('[data-auth-google]');
    const authUser = wizardForm.querySelector('[data-auth-user]');
    const requireAuth = wizardForm.dataset.requireAuth === 'true';
    let isAuthenticated = false;
    let currentUser: { email?: string; name?: string; phone?: string | null } | null = null;

    const nameInput = wizardForm.querySelector('#wizard-name') as HTMLInputElement | null;
    const emailInput = wizardForm.querySelector('#wizard-email') as HTMLInputElement | null;
    const phoneInput = wizardForm.querySelector('#wizard-phone') as HTMLInputElement | null;

    const fillContactFields = () => {
      if (!currentUser) return;
      if (nameInput && !nameInput.value && currentUser.name) {
        nameInput.value = currentUser.name;
      }
      if (emailInput && !emailInput.value && currentUser.email) {
        emailInput.value = currentUser.email;
      }
      if (phoneInput && !phoneInput.value && currentUser.phone) {
        phoneInput.value = currentUser.phone;
      }
    };

    const setAuthState = (email: string) => {
      isAuthenticated = Boolean(email);
      if (authUser) {
        if (email) {
          authUser.textContent = `Conectado como ${email}`;
          authUser.removeAttribute('hidden');
        } else {
          authUser.textContent = '';
          authUser.setAttribute('hidden', 'true');
        }
      }
      if (authBlock) {
        authBlock.classList.toggle('is-authenticated', Boolean(email));
        const title = authBlock.querySelector('h5');
        const subtitle = authBlock.querySelector('p');
        if (title && subtitle) {
          if (email) {
            title.textContent = 'Sesion iniciada';
            subtitle.textContent = 'Ya puedes confirmar tu reserva.';
          } else {
            title.textContent = 'Inicia sesion para reservar';
            subtitle.textContent = 'Necesitas iniciar sesion con Google para confirmar tu reserva.';
          }
        }
      }
      if (submitBtn && requireAuth) {
        submitBtn.disabled = !isAuthenticated;
      }
    };

    const currentUserRaw = wizardForm.dataset.currentUser || '';
    if (currentUserRaw) {
      try {
        const parsed = JSON.parse(currentUserRaw);
        if (parsed) {
          currentUser = parsed;
        }
        if (parsed && parsed.email) {
          setAuthState(parsed.email);
        }
      } catch {
        setAuthState('');
      }
    } else {
      setAuthState('');
    }
    fillContactFields();

    authButton?.addEventListener('click', () => {
      const returnUrl = `${window.location.pathname}${window.location.search}#reserve`;
      window.location.href = `/mi-cuenta/auth/google?return_url=${encodeURIComponent(returnUrl)}`;
    });

    const parseJsonScript = (selector: string, fallback: unknown) => {
      const el = wizardForm.querySelector(selector);
      if (!el) return fallback;
      try {
        const parsed = JSON.parse(el.textContent || 'null');
        return parsed ?? fallback;
      } catch {
        return fallback;
      }
    };

    const businessHours = parseJsonScript('script[data-hours]', []) as {
      day_of_week: number;
      is_open: boolean;
      open_time: string;
      close_time: string;
    }[];
    const businessHourSlots = parseJsonScript('script[data-business-hour-slots]', []) as {
      day_of_week: number;
      open_time: string;
      close_time: string;
      sort_order?: number;
      is_active?: boolean;
    }[];
    const specialDays = parseJsonScript('script[data-special-days]', []) as {
      id?: string;
      date: string;
      is_open: boolean;
      open_time: string | null;
      close_time: string | null;
      note: string | null;
    }[];
    const specialDaySlots = parseJsonScript('script[data-special-day-slots]', []) as {
      special_day_id: string;
      open_time: string;
      close_time: string;
      sort_order?: number;
    }[];
    const bookings = parseJsonScript('script[data-bookings]', []) as {
      booking_date: string;
      booking_time: string | null;
      guests: number | null;
      status: string;
    }[];
    const capacityRaw = parseJsonScript('script[data-capacity]', null) as number | null;
    const capacityNum = Number(capacityRaw);
    const capacity = Number.isFinite(capacityNum) && capacityNum > 0 ? capacityNum : null;

    const debugWebsiteId = wizardForm.dataset.websiteId || '';
    console.log('[ReservationWizard] websiteId', debugWebsiteId);
    console.log('[ReservationWizard] hoursCount', businessHours.length);
    console.log('[ReservationWizard] slotsCount', businessHourSlots.length);
    console.log('[ReservationWizard] specialDaysCount', specialDays.length);
    console.log('[ReservationWizard] specialSlotsCount', specialDaySlots.length);

    const monthNames = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                        'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
    const slotIntervalMinutes = 30;
    const maxAdvanceDays = 90;
    let currentStep = 1;
    let currentDate = new Date();
    let selectedDate: Date | null = null;
    let timeOptions: HTMLButtonElement[] = [];

    const today = new Date();
    today.setHours(0, 0, 0, 0);

    const toIsoDate = (date: Date) => {
      const year = date.getFullYear();
      const month = String(date.getMonth() + 1).padStart(2, '0');
      const day = String(date.getDate()).padStart(2, '0');
      return `${year}-${month}-${day}`;
    };

    const fromIsoDate = (value: string) => {
      const [year, month, day] = value.split('-').map(Number);
      return new Date(year, (month || 1) - 1, day || 1);
    };

    const toMinutes = (value: string) => {
      if (!value || typeof value !== 'string') return null;
      const [h, m] = value.slice(0, 5).split(':').map(Number);
      if (!Number.isFinite(h) || !Number.isFinite(m)) return null;
      return h * 60 + m;
    };

    const normalizeTime = (value: string) => (typeof value === 'string' ? value.slice(0, 5) : '');

    const toTimeString = (minutes: number) => {
      const h = Math.floor(minutes / 60);
      const m = minutes % 60;
      return `${String(h).padStart(2, '0')}:${String(m).padStart(2, '0')}`;
    };

    const clampToWindow = (openMin: number | null, closeMin: number | null) => {
      if (!Number.isFinite(openMin) || !Number.isFinite(closeMin) || (openMin as number) >= (closeMin as number)) {
        return null;
      }
      return { openMin: openMin as number, closeMin: closeMin as number };
    };

    const buildRangesFromSlots = (slots: { open_time: string; close_time: string }[]) => {
      if (!Array.isArray(slots) || slots.length === 0) return [];
      return slots
        .map((slot) => clampToWindow(toMinutes(slot.open_time), toMinutes(slot.close_time)))
        .filter((range): range is { openMin: number; closeMin: number } => range !== null);
    };

    const getFallbackRangesForDay = (date: Date) => {
      const dayOfWeek = (date.getDay() + 6) % 7;
      const day = businessHours.find((d) => d.day_of_week === dayOfWeek);
      if (!day) {
        if (businessHourSlots.length > 0 || businessHours.length > 0) {
          return [];
        }
        const fallback = clampToWindow(13 * 60, 23 * 60);
        return fallback ? [fallback] : [];
      }
      if (!day.is_open) return [];
      const range = clampToWindow(toMinutes(day.open_time), toMinutes(day.close_time))
        || clampToWindow(13 * 60, 23 * 60);
      return range ? [range] : [];
    };

    const getRangesForDate = (date: Date) => {
      const iso = toIsoDate(date);
      console.debug('[ReservationWizard] getRangesForDate', { iso });
      if (businessHourSlots.length === 0 && businessHours.length === 0 && specialDays.length === 0) {
        console.warn('[ReservationWizard] no schedule data, blocking availability', {
          websiteId: debugWebsiteId,
          hoursCount: businessHours.length,
          slotsCount: businessHourSlots.length,
          specialDaysCount: specialDays.length,
          specialSlotsCount: specialDaySlots.length,
        });
        return [];
      }
      const special = specialDays.find((d) => d.date === iso);

      if (special) {
        console.debug('[ReservationWizard] specialDay hit', special);
        if (!special.is_open) return [];
        const specialSlotRanges = buildRangesFromSlots(
          specialDaySlots
            .filter((slot) => slot.special_day_id === special.id)
            .sort((a, b) => (a.sort_order || 0) - (b.sort_order || 0))
        );
        if (specialSlotRanges.length) return specialSlotRanges;

        const specialRange = clampToWindow(toMinutes(special.open_time || ''), toMinutes(special.close_time || ''));
        if (specialRange) return [specialRange];

        return getFallbackRangesForDay(date);
      }

      const dayOfWeek = (date.getDay() + 6) % 7;
      console.debug('[ReservationWizard] weekday', { dayOfWeek });
      const daySlots = businessHourSlots
        .filter((slot) => slot.day_of_week === dayOfWeek && slot.is_active !== false)
        .sort((a, b) => (a.sort_order || 0) - (b.sort_order || 0));
      console.debug('[ReservationWizard] daySlots', daySlots);
      const daySlotRanges = buildRangesFromSlots(daySlots);
      if (daySlotRanges.length) return daySlotRanges;
      if (businessHourSlots.length > 0) return [];

      return getFallbackRangesForDay(date);
    };

    const getBookingsForDate = (isoDate: string) =>
      bookings.filter((b) => b.booking_date === isoDate && b.status !== 'cancelled');

    const getBookedGuestsForSlot = (isoDate: string, time: string) => {
      const slotTime = normalizeTime(time);
      return getBookingsForDate(isoDate)
        .filter((b) => normalizeTime(b.booking_time || '') === slotTime)
        .reduce((sum, b) => sum + (Number(b.guests) || 2), 0);
    };

    const generateSlotsForDate = (date: Date) => {
      const ranges = getRangesForDate(date);
      if (!ranges.length) return [];
      const isoDate = toIsoDate(date);
      const slots: { time: string; remaining: number | null; isFull: boolean }[] = [];
      ranges.forEach((range) => {
        for (let minutes = range.openMin; minutes + slotIntervalMinutes <= range.closeMin; minutes += slotIntervalMinutes) {
          const time = toTimeString(minutes);
          const bookedGuests = getBookedGuestsForSlot(isoDate, time);
          const remaining = capacity ? Math.max(0, capacity - bookedGuests) : null;
          const isFull = capacity ? remaining <= 0 : false;
          slots.push({ time, remaining, isFull });
        }
      });
      return slots;
    };

    const getGuestCount = () => Number(selectedGuestsInput?.value || 2);

    const getAvailableSlotsForDate = (date: Date, guests: number) => {
      const slots = generateSlotsForDate(date);
      if (!capacity) return slots;
      return slots.filter((slot) => (slot.remaining ?? 0) >= guests);
    };

    const hasAvailability = (date: Date) => {
      const maxDate = new Date(today);
      maxDate.setDate(maxDate.getDate() + maxAdvanceDays);
      if (date < today || date > maxDate) return false;
      const slots = getAvailableSlotsForDate(date, getGuestCount());
      console.debug('[ReservationWizard] availability', {
        iso: toIsoDate(date),
        slots: slots.map((slot) => slot.time),
      });
      return slots.length > 0;
    };

    const renderCalendar = () => {
      if (!calendarDays || !monthYearDisplay) return;

      const year = currentDate.getFullYear();
      const month = currentDate.getMonth();
      monthYearDisplay.textContent = `${monthNames[month]} ${year}`;

      const firstDay = new Date(year, month, 1);
      const lastDay = new Date(year, month + 1, 0);
      const startDay = (firstDay.getDay() + 6) % 7;

      calendarDays.innerHTML = '';

      for (let i = 0; i < startDay; i++) {
        const spacer = document.createElement('div');
        spacer.className = 'calendar-spacer';
        calendarDays.appendChild(spacer);
      }

      for (let d = 1; d <= lastDay.getDate(); d++) {
        const dayDate = new Date(year, month, d);
        const day = document.createElement('button');
        day.type = 'button';
        day.className = 'calendar-day';
        day.textContent = String(d);
        day.dataset.date = toIsoDate(dayDate);

        const invalid = !hasAvailability(dayDate);
        if (invalid) day.classList.add('disabled');
        if (dayDate.toDateString() === today.toDateString()) day.classList.add('today');
        if (selectedDate && dayDate.toDateString() === selectedDate.toDateString()) {
          day.classList.add('selected');
          day.setAttribute('data-selected', 'true');
          day.style.background = 'var(--neumor-bg)';
          day.style.color = 'var(--accent)';
          day.style.borderRadius = '999px';
          day.style.width = '34px';
          day.style.height = '34px';
          day.style.display = 'flex';
          day.style.alignItems = 'center';
          day.style.justifyContent = 'center';
          day.style.boxShadow = 'inset 2px 2px 6px rgba(0, 0, 0, 0.14), inset -2px -2px 6px rgba(255, 255, 255, 0.8), 0 0 0 2px rgba(var(--accent-rgb, 99, 102, 241), 0.45), 0 6px 14px rgba(0, 0, 0, 0.1)';
        }
        if (!invalid) {
          day.addEventListener('click', () => selectDate(dayDate));
        }

        calendarDays.appendChild(day);
      }

      const totalCells = calendarDays.children.length;
      const remaining = 42 - totalCells;
      for (let i = 0; i < remaining; i++) {
        const spacer = document.createElement('div');
        spacer.className = 'calendar-spacer';
        calendarDays.appendChild(spacer);
      }
    };

    const updateSummary = () => {
      const summaryDate = document.getElementById('summary-date');
      const summaryTime = document.getElementById('summary-time');
      const summaryGuests = document.getElementById('summary-guests');
      const summaryZone = document.getElementById('summary-zone');

      if (summaryDate && selectedDateInput.value) {
        const date = fromIsoDate(selectedDateInput.value);
        summaryDate.textContent = date.toLocaleDateString('es-ES', {
          weekday: 'short', day: 'numeric', month: 'short'
        });
      }
      if (summaryTime) summaryTime.textContent = selectedTimeInput.value || '-';
      if (summaryGuests) summaryGuests.textContent = `${selectedGuestsInput.value} personas`;
      if (summaryZone) summaryZone.textContent = selectedZoneInput.value || 'Interior';
    };

    const updateNextButton = () => {
      const step1NextBtn = document.querySelector('.wizard-step[data-step="1"] .next-step') as HTMLButtonElement;
      if (step1NextBtn) {
        if (!selectedDateInput.value || !selectedTimeInput.value) {
          step1NextBtn.disabled = true;
          return;
        }
        const dateObj = fromIsoDate(selectedDateInput.value);
        const availability = getAvailableSlotsForDate(dateObj, getGuestCount());
        step1NextBtn.disabled = availability.length === 0;
      }
    };

    const renderTimeOptions = () => {
      if (!timeGrid) return;
      timeGrid.innerHTML = '';
      selectedTimeInput.value = '';

      if (!selectedDate) {
        const empty = document.createElement('div');
        empty.className = 'time-empty';
        empty.textContent = 'Selecciona una fecha';
        timeGrid.appendChild(empty);
        updateNextButton();
        updateSummary();
        return;
      }

      const availableSlots = getAvailableSlotsForDate(selectedDate, getGuestCount());
      if (!availableSlots.length) {
        const empty = document.createElement('div');
        empty.className = 'time-empty';
        empty.textContent = 'Sin horarios disponibles';
        timeGrid.appendChild(empty);
        updateNextButton();
        updateSummary();
        return;
      }

      availableSlots.forEach((slot) => {
        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'time-slot';
        btn.dataset.time = slot.time;
        btn.textContent = slot.time;
        btn.addEventListener('click', () => {
          timeOptions.forEach((opt) => {
            opt.classList.remove('selected');
            opt.style.background = '';
            opt.style.color = '';
            opt.style.boxShadow = '';
          });
          btn.classList.add('selected');
          btn.style.background = 'var(--neumor-bg)';
          btn.style.color = 'var(--accent)';
          btn.style.borderRadius = '999px';
          btn.style.boxShadow = 'inset 2px 2px 6px rgba(0, 0, 0, 0.14), inset -2px -2px 6px rgba(255, 255, 255, 0.8), 0 0 0 2px rgba(var(--accent-rgb, 99, 102, 241), 0.45), 0 6px 14px rgba(0, 0, 0, 0.1)';
          selectedTimeInput.value = slot.time;
          clearMessage();
          updateNextButton();
          updateSummary();
        });
        timeGrid.appendChild(btn);
      });

      timeOptions = Array.from(timeGrid.querySelectorAll('.time-slot')) as HTMLButtonElement[];
      updateNextButton();
      updateSummary();
    };

    const selectDate = (date: Date) => {
      selectedDate = date;
      selectedDateInput.value = toIsoDate(date);
      clearMessage();
      renderCalendar();
      renderTimeOptions();
      updateNextButton();
      updateSummary();
    };

    prevMonthBtn?.addEventListener('click', () => {
      currentDate.setMonth(currentDate.getMonth() - 1);
      renderCalendar();
    });

    nextMonthBtn?.addEventListener('click', () => {
      currentDate.setMonth(currentDate.getMonth() + 1);
      renderCalendar();
    });

    guestPills.forEach(pill => {
      pill.addEventListener('click', () => {
        guestPills.forEach(p => p.classList.remove('active'));
        pill.classList.add('active');
        selectedGuestsInput.value = (pill as HTMLElement).dataset.guests || '2';
        if (selectedDate) {
          renderTimeOptions();
          renderCalendar();
        }
        updateSummary();
      });
    });

    zoneOptions.forEach(opt => {
      opt.addEventListener('click', () => {
        zoneOptions.forEach(o => o.classList.remove('active'));
        opt.classList.add('active');
        selectedZoneInput.value = (opt as HTMLElement).dataset.zone || '';
        updateSummary();
      });
    });

    occasionOptions.forEach(opt => {
      opt.addEventListener('click', () => {
        occasionOptions.forEach(o => o.classList.remove('active'));
        opt.classList.add('active');
        selectedOccasionInput.value = (opt as HTMLElement).dataset.occasion || '';
      });
    });

    const goToStep = (step: number) => {
      currentStep = step;

      clearMessage();
      wizardSteps.forEach(s => s.classList.remove('active'));
      document.querySelector(`.wizard-step[data-step="${step}"]`)?.classList.add('active');

      progressSteps.forEach((ps, i) => {
        ps.classList.remove('active', 'completed');
        if (i + 1 < step) ps.classList.add('completed');
        if (i + 1 === step) ps.classList.add('active');
      });

      if (progressFill) {
        (progressFill as HTMLElement).dataset.step = String(step);
      }
    };

    nextBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        if (currentStep === 1 && requireAuth && !isAuthenticated) {
          showMessage('Necesitas iniciar sesi√≥n con Google para continuar.');
          authBlock?.scrollIntoView({ behavior: 'smooth', block: 'center' });
          return;
        }
        if (currentStep === 1) {
          if (!selectedDateInput.value || !selectedTimeInput.value) {
            showMessage('Selecciona una fecha y hora disponibles para continuar.');
            return;
          }
          const dateObj = fromIsoDate(selectedDateInput.value);
          const availability = getAvailableSlotsForDate(dateObj, getGuestCount());
          if (!availability.length) {
            showMessage('Ese d√≠a no est√° disponible. Elige otra fecha.');
            renderCalendar();
            renderTimeOptions();
            return;
          }
          const isAvailable = availability.some((slot) => slot.time === selectedTimeInput.value);
          if (!isAvailable) {
            showMessage('Esa hora ya no est√° disponible. Elige otra.');
            renderCalendar();
            renderTimeOptions();
            return;
          }
        }
        if (currentStep < 3) goToStep(currentStep + 1);
      });
    });

    prevBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        if (currentStep > 1) goToStep(currentStep - 1);
      });
    });

    let isSubmitting = false;

    wizardForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (isSubmitting) return;
      if (requireAuth && !isAuthenticated) {
        showMessage('Necesitas iniciar sesi√≥n con Google para reservar.');
        authBlock?.scrollIntoView({ behavior: 'smooth', block: 'center' });
        return;
      }

      const dateValue = selectedDateInput.value;
      const timeValue = selectedTimeInput.value;
      if (!dateValue || !timeValue) {
        goToStep(1);
        return;
      }

      const dateObj = fromIsoDate(dateValue);
      const availability = getAvailableSlotsForDate(dateObj, getGuestCount());
      if (!availability.length) {
        showMessage('Ese d√≠a no est√° disponible. Elige otra fecha.');
        goToStep(1);
        renderCalendar();
        renderTimeOptions();
        return;
      }
      const isAvailable = availability.some((slot) => slot.time === timeValue);
      if (!isAvailable) {
        showMessage('Esa hora ya no est√° disponible. Elige otra.');
        goToStep(1);
        renderCalendar();
        renderTimeOptions();
        return;
      }

      isSubmitting = true;
      submitBtn?.classList.add('loading');
      submitBtn?.setAttribute('disabled', 'true');

      const webhookUrl = wizardForm.dataset.webhook;
      const websiteId = wizardForm.dataset.websiteId;
      const formData = new FormData(wizardForm);
      const rawData = Object.fromEntries(formData);

      const data = {
        website_id: websiteId,
        nombre: rawData.name,
        email: rawData.email,
        telefono: rawData.phone,
        fecha: rawData.date,
        hora: rawData.time,
        personas: parseInt(rawData.guests as string) || 2,
        zona: rawData.zone,
        ocasion: rawData.occasion,
        notas: rawData.notes || "",
      };

      await new Promise(resolve => setTimeout(resolve, 1500));

      try {
        if (webhookUrl) {
          const response = await fetch(webhookUrl, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });
          if (!response.ok) {
            const errorData = await response.json().catch(() => ({}));
            throw new Error(errorData?.error || "Error");
          }
        }

        wizardSteps.forEach(s => s.classList.remove('active'));
        wizardSuccess.style.display = 'block';
        clearMessage();
        createConfetti();
      } catch (error) {
        const message =
          error instanceof Error && error.message && error.message !== "Error"
            ? error.message
            : "No se pudo enviar la reserva. Revisa fecha y hora disponibles.";
        showMessage(message);
      } finally {
        submitBtn?.classList.remove('loading');
        submitBtn?.removeAttribute('disabled');
        isSubmitting = false;
      }
    });

    function createConfetti() {
      const container = document.querySelector('.confetti-container');
      if (!container) return;

      const colors = ['#6366f1', '#8b5cf6', '#ec4899', '#f59e0b', '#10b981'];

      for (let i = 0; i < 50; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.setProperty('--x', `${(Math.random() - 0.5) * 200}px`);
        confetti.style.setProperty('--y', `${Math.random() * 150 + 50}px`);
        confetti.style.left = `${Math.random() * 100 - 50}px`;
        confetti.style.top = `${Math.random() * 100 - 50}px`;
        confetti.style.animationDelay = `${Math.random() * 0.3}s`;
        container.appendChild(confetti);

        setTimeout(() => confetti.remove(), 1500);
      }
    }

    newReservationBtn?.addEventListener('click', () => {
      wizardForm.reset();
      selectedDate = null;
      renderCalendar();
      renderTimeOptions();
      goToStep(1);
      wizardSuccess.style.display = 'none';
      clearMessage();
      updateNextButton();
    });

    renderCalendar();
    renderTimeOptions();
    updateNextButton();
    updateSummary();
  })();
</script>
