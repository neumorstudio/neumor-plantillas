---
/**
 * ReservationWizard - Formulario multi-step moderno
 * Flujo: Fecha/Hora ‚Üí Detalles ‚Üí Contacto ‚Üí Confirmaci√≥n
 * Con calendario visual, time wheel, selector de zona y ocasiones
 */
interface Props {
  title?: string;
  subtitle?: string;
  webhookUrl?: string;
  websiteId?: string;
  currentUser?: { email: string; id: string; customerId: string | null; name?: string; phone?: string | null } | null;
  zones?: string[];
  occasions?: { id: string; label: string; icon: string }[];
  businessHours?: { day_of_week: number; is_open: boolean; open_time: string; close_time: string }[];
  businessHourSlots?: { day_of_week: number; open_time: string; close_time: string; sort_order?: number; is_active?: boolean }[];
  specialDays?: { id?: string; date: string; is_open: boolean; open_time: string | null; close_time: string | null; note: string | null }[];
  specialDaySlots?: { special_day_id: string; open_time: string; close_time: string; sort_order?: number }[];
  bookings?: { booking_date: string; booking_time: string | null; guests: number | null; status: string }[];
  capacity?: number | null;
}

const {
  title = "Reserva tu Mesa",
  subtitle = "Selecciona fecha y hora para tu visita",
  webhookUrl = "",
  websiteId = "",
  currentUser = null,
  zones = ["Interior", "Terraza", "Barra", "Privado"],
  occasions = [
    { id: "normal", label: "Comida normal", icon: "üçΩÔ∏è" },
    { id: "birthday", label: "Cumplea√±os", icon: "üéÇ" },
    { id: "anniversary", label: "Aniversario", icon: "üíï" },
    { id: "business", label: "Negocios", icon: "üíº" },
    { id: "celebration", label: "Celebraci√≥n", icon: "üéâ" },
  ],
  businessHours = [],
  businessHourSlots = [],
  specialDays = [],
  specialDaySlots = [],
  bookings = [],
  capacity = null,
} = Astro.props;

// Generar horarios disponibles
const timeSlots = [];
for (let h = 13; h <= 22; h++) {
  timeSlots.push(`${h}:00`);
  timeSlots.push(`${h}:30`);
}

const hoursPayload = JSON.stringify(businessHours);
const businessHourSlotsPayload = JSON.stringify(businessHourSlots);
const specialDaysPayload = JSON.stringify(specialDays);
const specialDaySlotsPayload = JSON.stringify(specialDaySlots);
const bookingsPayload = JSON.stringify(bookings);
const capacityPayload = JSON.stringify(capacity);
---

<section id="reserve" class="section reservation-wizard-section">
  <div class="container">
    <div class="wizard-container neumor-card">
      <!-- Progress Bar -->
      <div class="progress-bar">
        <div class="progress-track">
          <div class="progress-fill" data-step="1"></div>
        </div>
        <div class="progress-steps">
          <div class="progress-step active" data-step="1">
            <div class="step-dot">1</div>
            <span>Fecha y Hora</span>
          </div>
          <div class="progress-step" data-step="2">
            <div class="step-dot">2</div>
            <span>Detalles</span>
          </div>
          <div class="progress-step" data-step="3">
            <div class="step-dot">3</div>
            <span>Contacto</span>
          </div>
        </div>
      </div>

      <form
        class="wizard-form"
        data-webhook={webhookUrl}
        data-website-id={websiteId}
        data-current-user={currentUser ? JSON.stringify(currentUser) : ""}
        data-require-auth="true"
      >
        <script type="application/json" data-hours set:html={hoursPayload}></script>
        <script type="application/json" data-business-hour-slots set:html={businessHourSlotsPayload}></script>
        <script type="application/json" data-special-days set:html={specialDaysPayload}></script>
        <script type="application/json" data-special-day-slots set:html={specialDaySlotsPayload}></script>
        <script type="application/json" data-bookings set:html={bookingsPayload}></script>
        <script type="application/json" data-capacity set:html={capacityPayload}></script>

        <div class="auth-block neumor-inset" data-auth-block>
          <div class="auth-content">
            <div class="auth-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
            </div>
            <div>
              <h5>Inicia sesion para reservar</h5>
              <p>Necesitas iniciar sesion con Google para confirmar tu reserva.</p>
            </div>
          </div>
          <div class="auth-actions">
            <button type="button" class="neumor-btn neumor-btn-accent" data-auth-google>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
              Continuar con Google
            </button>
            <span class="auth-user" data-auth-user hidden></span>
          </div>
        </div>
        <!-- Step 1: Fecha y Hora -->
        <div id="wizard-message" class="wizard-message" hidden></div>
        <div class="wizard-step active" data-step="1">
          <h2 class="step-title">{title}</h2>
          <p class="step-subtitle">{subtitle}</p>

          <div class="datetime-selector">
            <!-- Calendar -->
            <div class="calendar-wrapper">
              <div class="calendar-header">
                <button type="button" class="calendar-nav prev-month" aria-label="Mes anterior">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                  </svg>
                </button>
                <span class="calendar-month-year"></span>
                <button type="button" class="calendar-nav next-month" aria-label="Mes siguiente">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                  </svg>
                </button>
              </div>
              <div class="calendar-weekdays">
                <span>Lu</span><span>Ma</span><span>Mi</span><span>Ju</span><span>Vi</span><span>Sa</span><span>Do</span>
              </div>
              <div class="calendar-days"></div>
              <input type="hidden" name="date" id="selectedDate" required />
            </div>

            <!-- Time Selector -->
            <div class="time-selector">
              <h3 class="time-label">Selecciona la hora</h3>
              <div class="time-grid" role="listbox" aria-label="Selector de hora">
                {timeSlots.map((time) => (
                  <button type="button" class="time-slot" data-time={time} role="option">
                    {time}
                  </button>
                ))}
              </div>
              <input type="hidden" name="time" id="selectedTime" required />
            </div>
          </div>

          <div class="step-actions">
            <button type="button" class="neumor-btn next-step" disabled>
              Continuar
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        </div>

        <!-- Step 2: Detalles -->
        <div class="wizard-step" data-step="2">
          <h2 class="step-title">Personaliza tu reserva</h2>
          <p class="step-subtitle">Cu√©ntanos m√°s sobre tu visita</p>

          <!-- Guests selector -->
          <div class="guests-selector">
            <h3 class="selector-label">¬øCu√°ntas personas?</h3>
            <div class="guests-pills">
              {[1, 2, 3, 4, 5, 6, 7, 8].map((num) => (
                <button type="button" class={`guest-pill ${num === 2 ? 'active' : ''}`} data-guests={num}>
                  {num === 8 ? '8+' : num}
                </button>
              ))}
            </div>
            <input type="hidden" name="guests" id="selectedGuests" value="2" />
          </div>

          <!-- Zone selector -->
          <div class="zone-selector">
            <h3 class="selector-label">¬øD√≥nde prefieres sentarte?</h3>
            <div class="zone-options">
              {zones.map((zone, i) => (
                <button type="button" class={`zone-option ${i === 0 ? 'active' : ''}`} data-zone={zone}>
                  <span class="zone-icon">
                    {zone === "Interior" && "üè†"}
                    {zone === "Terraza" && "‚òÄÔ∏è"}
                    {zone === "Barra" && "üç∏"}
                    {zone === "Privado" && "üö™"}
                  </span>
                  <span class="zone-name">{zone}</span>
                </button>
              ))}
            </div>
            <input type="hidden" name="zone" id="selectedZone" value={zones[0]} />
          </div>

          <!-- Occasion selector -->
          <div class="occasion-selector">
            <h3 class="selector-label">¬øEs una ocasi√≥n especial?</h3>
            <div class="occasion-options">
              {occasions.map((occ, i) => (
                <button type="button" class={`occasion-option ${i === 0 ? 'active' : ''}`} data-occasion={occ.id}>
                  <span class="occasion-icon">{occ.icon}</span>
                  <span class="occasion-label">{occ.label}</span>
                </button>
              ))}
            </div>
            <input type="hidden" name="occasion" id="selectedOccasion" value="normal" />
          </div>

          <div class="step-actions">
            <button type="button" class="neumor-btn neumor-btn-secondary prev-step">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              Atr√°s
            </button>
            <button type="button" class="neumor-btn next-step">
              Continuar
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        </div>

        <!-- Step 3: Contacto -->
        <div class="wizard-step" data-step="3">
          <h2 class="step-title">Tus datos de contacto</h2>
          <p class="step-subtitle">Para confirmar tu reserva</p>

          <div class="contact-form">
            <div class="form-group">
              <label for="wizard-name">Nombre completo</label>
              <input type="text" id="wizard-name" name="name" class="neumor-input" placeholder="Tu nombre" required />
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="wizard-email">Email</label>
                <input type="email" id="wizard-email" name="email" class="neumor-input" placeholder="tu@email.com" required />
              </div>
              <div class="form-group">
                <label for="wizard-phone">Tel√©fono</label>
                <input type="tel" id="wizard-phone" name="phone" class="neumor-input" placeholder="+34 600 000 000" required />
              </div>
            </div>

            <div class="form-group">
              <label for="wizard-notes">Notas adicionales (opcional)</label>
              <textarea id="wizard-notes" name="notes" class="neumor-input" rows="3" placeholder="Alergias, peticiones especiales..."></textarea>
            </div>
          </div>

          <!-- Resumen -->
          <div class="reservation-summary neumor-inset">
            <h4>Resumen de tu reserva</h4>
            <div class="summary-grid">
              <div class="summary-item">
                <span class="summary-icon">üìÖ</span>
                <span class="summary-value" id="summary-date">-</span>
              </div>
              <div class="summary-item">
                <span class="summary-icon">‚è∞</span>
                <span class="summary-value" id="summary-time">-</span>
              </div>
              <div class="summary-item">
                <span class="summary-icon">üë•</span>
                <span class="summary-value" id="summary-guests">2 personas</span>
              </div>
              <div class="summary-item">
                <span class="summary-icon">üìç</span>
                <span class="summary-value" id="summary-zone">Interior</span>
              </div>
            </div>
          </div>

          <div class="step-actions">
            <button type="button" class="neumor-btn neumor-btn-secondary prev-step">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              Atr√°s
            </button>
            <button type="submit" class="neumor-btn neumor-btn-accent submit-btn">
              <span class="btn-text">Confirmar Reserva</span>
              <span class="btn-loader"></span>
            </button>
          </div>
        </div>

        <!-- Success State -->
        <div class="wizard-success" style="display: none;">
          <div class="success-animation">
            <div class="success-circle">
              <svg class="checkmark" viewBox="0 0 52 52">
                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
                <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
              </svg>
            </div>
            <div class="confetti-container"></div>
          </div>
          <h2 class="success-title">¬°Reserva confirmada!</h2>
          <p class="success-message">Te hemos enviado un email con los detalles. Te esperamos.</p>
          <button type="button" class="neumor-btn new-reservation">Hacer otra reserva</button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  .reservation-wizard-section {
    padding: 4rem 0;
  }

  .wizard-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2.5rem;
    overflow: visible;
    border-radius: 1.5rem !important;
  }

  /* Progress Bar */
  .progress-bar {
    margin-bottom: 2.5rem;
  }

  .progress-track {
    height: 4px;
    background: var(--neumor-bg);
    border-radius: 2px;
    margin-bottom: 1.5rem;
    box-shadow: inset 2px 2px 4px var(--shadow-dark), inset -2px -2px 4px var(--shadow-light);
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(135deg, var(--accent), var(--accent-hover));
    border-radius: 2px;
    width: 33.33%;
    transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .progress-fill[data-step="2"] { width: 66.66%; }
  .progress-fill[data-step="3"] { width: 100%; }

  .progress-steps {
    display: flex;
    justify-content: space-between;
  }

  .progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.5;
    transition: opacity 0.3s;
  }

  .progress-step.active,
  .progress-step.completed {
    opacity: 1;
  }

  .step-dot {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    background: var(--neumor-bg);
    box-shadow: 4px 4px 8px var(--shadow-dark), -4px -4px 8px var(--shadow-light);
    transition: all 0.3s;
  }

  .progress-step.active .step-dot {
    background: linear-gradient(135deg, var(--accent), var(--accent-hover));
    color: white;
    box-shadow: 0 4px 15px rgba(var(--accent-rgb, 99, 102, 241), 0.4);
  }

  .progress-step.completed .step-dot {
    background: var(--accent);
    color: white;
  }

  .progress-step span {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  /* Wizard Steps */
  .wizard-step {
    display: none;
    animation: fadeSlideIn 0.4s ease-out;
  }

  .wizard-step.active {
    display: block;
  }

  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .step-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .step-subtitle {
    color: var(--text-secondary);
    text-align: center;
    margin-bottom: 2rem;
  }

  .wizard-message {
    margin: 0 auto 1.5rem;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    background: var(--neumor-bg);
    color: var(--text-primary);
    box-shadow: inset 3px 3px 6px var(--shadow-dark), inset -3px -3px 6px var(--shadow-light);
    font-size: 0.95rem;
    max-width: 560px;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .wizard-message.error {
    color: #b91c1c;
  }

  .wizard-message.info {
    color: var(--accent);
  }

  /* DateTime Selector */
  .datetime-selector {
    display: grid;
    grid-template-columns: 1fr 200px;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  /* Calendar */
  .calendar-wrapper {
    background: var(--neumor-bg);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: inset 3px 3px 6px var(--shadow-dark), inset -3px -3px 6px var(--shadow-light);
    margin: 0 auto;
    width: min(100%, 360px);
    justify-self: center;
  }

  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .calendar-month-year {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .calendar-nav {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--neumor-bg);
    border: none;
    cursor: pointer;
    color: var(--text-primary);
    box-shadow: 3px 3px 6px var(--shadow-dark), -3px -3px 6px var(--shadow-light);
    transition: all 0.2s;
  }

  .calendar-nav:hover {
    box-shadow: 2px 2px 4px var(--shadow-dark), -2px -2px 4px var(--shadow-light);
  }

  .calendar-nav:active {
    box-shadow: inset 2px 2px 4px var(--shadow-dark), inset -2px -2px 4px var(--shadow-light);
  }

  .calendar-weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    text-align: center;
    margin-bottom: 0.75rem;
    width: 100%;
  }

  .calendar-weekdays span {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    padding: 0.5rem;
  }

  .calendar-days {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    justify-items: center;
    width: 100%;
  }

  .calendar-day {
    aspect-ratio: 1;
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
    background: transparent;
    color: var(--text-primary);
  }

  .calendar-day:hover:not(.disabled):not(.selected) {
    background: var(--shadow-light);
  }

  .calendar-day.today {
    font-weight: 700;
    color: var(--accent);
  }

  .calendar-day.selected {
    background: var(--accent) !important;
    color: #fff !important;
    box-shadow:
      inset 2px 2px 4px rgba(255, 255, 255, 0.2),
      inset -2px -2px 6px rgba(0, 0, 0, 0.25),
      0 0 0 2px rgba(255, 255, 255, 0.45),
      0 6px 14px rgba(var(--accent-rgb, 99, 102, 241), 0.35) !important;
    transform: scale(1.06);
    font-weight: 700;
  }

  .calendar-day.disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .calendar-day.other-month {
    opacity: 0.3;
  }

  .calendar-spacer {
    width: 34px;
    height: 34px;
  }

  .calendar-day.today {
    border: 2px solid rgba(var(--accent-rgb, 99, 102, 241), 0.4);
    border-radius: 50%;
  }

  .auth-block {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 1rem;
    margin-bottom: 1.5rem;
  }

  .auth-block.is-authenticated {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0.02));
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  .auth-content {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .auth-icon {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background: var(--neumor-bg);
    box-shadow: inset 2px 2px 4px var(--shadow-dark), inset -2px -2px 4px var(--shadow-light);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
  }

  .auth-block h5 {
    font-size: 0.95rem;
    margin: 0 0 0.25rem;
  }

  .auth-block p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.85rem;
  }

  .auth-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .auth-actions button svg {
    margin-right: 0.4rem;
  }

  .auth-user {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .auth-block.is-authenticated .auth-actions button {
    display: none;
  }

  .auth-block:not(.is-authenticated) .auth-user {
    display: none !important;
  }

  /* Time Selector */
  .time-selector {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .time-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .time-grid {
    width: 100%;
    max-height: 240px;
    overflow-y: auto;
    display: grid;
    gap: 0.6rem;
    padding: 0.25rem;
    scrollbar-width: none;
  }

  .time-grid::-webkit-scrollbar {
    display: none;
  }

  .time-slot {
    width: 100%;
    padding: 0.6rem;
    border-radius: 999px;
    border: none;
    cursor: pointer;
    background: var(--neumor-bg);
