---
interface Props {
  title?: string;
  subtitle?: string;
  address?: string;
  phone?: string;
  email?: string;
  mapUrl?: string;
  webhookUrl?: string;
  websiteId?: string;
  variant?: "form" | "info";
}

const {
  title = "Contacto",
  subtitle = "Estamos aquí para ayudarte",
  address = "",
  phone = "",
  email = "",
  mapUrl = "",
  webhookUrl = "",
  websiteId = "",
  variant = "form",
} = Astro.props;
---

<section id="contact" class={`section contact-variant-${variant}`}>
  <div class="container">
    <div class="contact-header">
      <h2 data-content="contactTitle">{title}</h2>
      <p data-content="contactSubtitle">{subtitle}</p>
    </div>
    <div class="contact-grid">
      <div class="contact-info neumor-card">
        {address && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Dirección</span>
              <span class="contact-value" data-content="address">{address}</span>
            </div>
          </div>
        )}
        {phone && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Teléfono</span>
              <a href={`tel:${phone}`} class="contact-value" data-content="phone">{phone}</a>
            </div>
          </div>
        )}
        {email && (
          <div class="contact-item">
            <div class="contact-icon neumor-inset">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="contact-text">
              <span class="contact-label">Email</span>
              <a href={`mailto:${email}`} class="contact-value" data-content="email">{email}</a>
            </div>
          </div>
        )}
      </div>
      {!address && !phone && !email && variant === "info" && (
        <div class="contact-placeholder neumor-card">
          <p>Configura tus datos de contacto en el panel de administración.</p>
        </div>
      )}
      {variant === "form" && (
        <form class="contact-form neumor-card" data-webhook={webhookUrl} data-website-id={websiteId}>
          <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" id="name" name="name" class="neumor-input" placeholder="Tu nombre" required />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="neumor-input" placeholder="tu@email.com" required />
          </div>
          <div class="form-group">
            <label for="message">Mensaje</label>
            <textarea id="message" name="message" class="neumor-input" rows="4" placeholder="Escribe tu mensaje aqui..." required></textarea>
          </div>
          <button type="submit" class="neumor-btn neumor-btn-accent submit-btn">
            Enviar Mensaje
          </button>
          <p class="form-disclaimer">
            Te responderemos lo antes posible.
          </p>
        </form>
      )}
    </div>
  </div>
</section>

<style>
  .contact-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .contact-header h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .contact-header p {
    font-size: 1.05rem;
    color: var(--text-secondary);
    max-width: 520px;
    margin: 0 auto;
  }

  .contact-grid {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-info {
    padding: 2rem;
    border-radius: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .contact-icon {
    width: 48px;
    height: 48px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    flex-shrink: 0;
  }

  .contact-icon svg {
    width: 24px;
    height: 24px;
  }

  .contact-text {
    display: flex;
    flex-direction: column;
  }

  .contact-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  .contact-value {
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
  }

  .contact-value:hover {
    color: var(--accent);
  }

  .contact-placeholder {
    padding: 3rem 2rem;
    text-align: center;
    border-radius: 1.25rem;
  }

  .contact-placeholder p {
    color: var(--text-secondary);
    margin: 0;
  }

  .contact-variant-form .contact-grid {
    max-width: 1000px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .contact-form {
    padding: 2rem;
    border-radius: 1.25rem;
  }

  .form-group {
    margin-bottom: 1.25rem;
  }

  .form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
    font-size: 0.9rem;
  }

  textarea.neumor-input {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    width: 100%;
    margin-top: 0.5rem;
  }

  .form-disclaimer {
    text-align: center;
    font-size: 0.85rem;
    margin-top: 1rem;
    color: var(--text-secondary);
  }

  @media (max-width: 968px) {
    .contact-variant-form .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

<script>
  const form = document.querySelector(".contact-form") as HTMLFormElement | null;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const webhookUrl = form.dataset.webhook;
    const websiteId = form.dataset.websiteId;
    const formData = new FormData(form);
    const rawData = Object.fromEntries(formData);

    const data = {
      website_id: websiteId,
      nombre: rawData.name,
      email: rawData.email,
      mensaje: rawData.message,
    };

    if (webhookUrl) {
      try {
        const response = await fetch(webhookUrl, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });
        if (response.ok) {
          alert("Mensaje enviado correctamente. Te responderemos pronto.");
          form.reset();
        } else {
          throw new Error("Error en respuesta");
        }
      } catch {
        alert("Error al enviar el mensaje. Por favor, intentalo de nuevo.");
      }
    } else {
      alert("Mensaje enviado correctamente. Te responderemos pronto.");
      form.reset();
    }
  });
</script>
