---
/**
 * HeroSplit - Pantalla dividida 50/50 estilo editorial
 */
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
  eyebrow?: string;
}

const {
  title,
  subtitle,
  ctaText = "Reservar Mesa",
  ctaLink = "#reserve",
  backgroundImage,
  eyebrow,
} = Astro.props;

const titleWords = title.split(" ");
---

<section class="hero-split">
  <div class="hero-image-side">
    {backgroundImage && (
      <img src={backgroundImage} alt="" class="hero-image" loading="eager" />
    )}
    <div class="image-overlay"></div>

    <div class="deco-line deco-line-1"></div>
    <div class="deco-line deco-line-2"></div>
  </div>

  <div class="hero-content-side">
    <div class="hero-content">
      {eyebrow && <span class="hero-eyebrow animate-slide-right">{eyebrow}</span>}

      <h1 class="hero-title">
        {titleWords.map((word, i) => (
          <span class="title-line animate-slide-right" style={`animation-delay: ${0.2 + i * 0.15}s`}>
            {word}
          </span>
        ))}
      </h1>

      <p class="hero-subtitle animate-fade-in">{subtitle}</p>

      <a href={ctaLink} class="hero-cta animate-fade-in animation-delay-600">
        <span class="cta-text" data-content="heroCta">{ctaText}</span>
        <span class="cta-arrow">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </a>
    </div>

    <div class="scroll-hint">
      <span class="scroll-line"></span>
    </div>
  </div>
</section>

<style>
  .hero-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    min-height: 100dvh;
  }

  .hero-image-side {
    position: relative;
    overflow: hidden;
    background: var(--shadow-dark);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    transition: transform 8s ease-out;
  }

  .hero-split:hover .hero-image {
    transform: scale(1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
  }

  .deco-line {
    position: absolute;
    background: var(--accent);
    opacity: 0.8;
  }

  .deco-line-1 {
    width: 60%;
    height: 3px;
    bottom: 20%;
    right: 0;
    transform: translateX(50%);
  }

  .deco-line-2 {
    width: 3px;
    height: 40%;
    top: 10%;
    right: 20%;
  }

  .hero-content-side {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 4rem;
    background: var(--neumor-bg);
    position: relative;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    font-size: 0.75rem;
    margin-bottom: 1rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 700;
    line-height: 1;
    display: flex;
    flex-direction: column;
    gap: 0.1em;
    margin-bottom: 1.5rem;
  }

  .title-line {
    display: inline-block;
    opacity: 0;
    transform: translateX(-30px);
    animation: slideInRight 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .hero-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.9rem 1.6rem;
    border-radius: 999px;
    background: var(--neumor-bg);
    box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.08),
      -4px -4px 10px rgba(255, 255, 255, 0.9);
    color: var(--accent);
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 6px 6px 14px rgba(0, 0, 0, 0.12),
      -6px -6px 14px rgba(255, 255, 255, 0.9);
  }

  .cta-arrow svg {
    width: 18px;
    height: 18px;
  }

  .scroll-hint {
    position: absolute;
    bottom: 2.5rem;
    right: 3rem;
  }

  .scroll-line {
    width: 2px;
    height: 40px;
    background: var(--accent);
    display: block;
    opacity: 0.5;
  }

  @keyframes slideInRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media (max-width: 900px) {
    .hero-split {
      grid-template-columns: 1fr;
    }

    .hero-content-side {
      padding: 2.5rem;
    }

    .scroll-hint {
      display: none;
    }
  }
</style>
