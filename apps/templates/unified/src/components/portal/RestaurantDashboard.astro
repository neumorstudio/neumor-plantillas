---
import type { CustomerProfile, CustomerBooking } from "../../lib/supabase-portal";

interface Props {
  customer: CustomerProfile;
  bookings: CustomerBooking[];
  loyaltyPoints: number;
}

const { customer, bookings, loyaltyPoints } = Astro.props;

const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString("es-ES", {
    weekday: "short",
    day: "numeric",
    month: "short",
  });
};

const getStatusBadge = (status: string) => {
  const statusMap: Record<string, { class: string; label: string }> = {
    pending: { class: "portal-badge-pending", label: "Pendiente" },
    confirmed: { class: "portal-badge-confirmed", label: "Confirmada" },
    completed: { class: "portal-badge-completed", label: "Completada" },
    cancelled: { class: "portal-badge-cancelled", label: "Cancelada" },
  };
  return statusMap[status] || { class: "portal-badge-pending", label: status };
};

const now = new Date();

// Upcoming reservations
const upcomingReservations = bookings.filter(
  (b) => new Date(b.booking_date) >= now && b.status !== "cancelled"
);

// Total visits
const totalVisits = bookings.filter((b) => b.status === "completed").length;
---

<div class="restaurant-theme">
  <h1 class="portal-page-title">Hola, {customer.name.split(" ")[0]}</h1>

  <!-- Loyalty Points -->
  {loyaltyPoints > 0 && (
    <div class="restaurant-points-card" style="margin-bottom: 1.5rem;">
      <div class="restaurant-points-value">{loyaltyPoints}</div>
      <div class="restaurant-points-label">Puntos de fidelidad</div>
    </div>
  )}

  <!-- Stats -->
  <div class="portal-stats-grid">
    <div class="portal-stat-card">
      <div class="portal-stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </div>
      <div class="portal-stat-value">{upcomingReservations.length}</div>
      <div class="portal-stat-label">Proximas reservas</div>
    </div>

    <div class="portal-stat-card">
      <div class="portal-stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <div class="portal-stat-value">{totalVisits}</div>
      <div class="portal-stat-label">Visitas totales</div>
    </div>
  </div>

  <!-- Upcoming reservations -->
  <div class="portal-section-header">
    <h2 class="portal-section-title">Proximas reservas</h2>
    <a href="/mi-cuenta/reservas" class="portal-section-link">Ver todas</a>
  </div>

  {upcomingReservations.length > 0 ? (
    <div class="portal-list">
      {upcomingReservations.slice(0, 3).map((res) => {
        const badge = getStatusBadge(res.status);
        return (
          <div class="portal-list-item">
            <div class="portal-list-item-header">
              <span class="portal-list-item-title">Reserva de mesa</span>
              <span class={`portal-badge ${badge.class}`}>{badge.label}</span>
            </div>
            <div class="portal-list-item-meta">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; margin-right: 0.25rem; vertical-align: middle;">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              {formatDate(res.booking_date)} a las {res.booking_time}
              {res.notes && <span style="margin-left: 0.5rem;">Â· {res.notes}</span>}
            </div>
          </div>
        );
      })}
    </div>
  ) : (
    <div class="portal-empty">
      <svg class="portal-empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      <p class="portal-empty-title">Sin reservas programadas</p>
      <p class="portal-empty-text">Reserva tu mesa para disfrutar de una experiencia unica.</p>
    </div>
  )}
</div>
