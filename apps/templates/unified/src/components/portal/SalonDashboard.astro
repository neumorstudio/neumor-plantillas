---
import type { CustomerProfile, CustomerBooking } from "../../lib/supabase-portal";

interface Props {
  customer: CustomerProfile;
  bookings: CustomerBooking[];
}

const { customer, bookings } = Astro.props;

// Format date
const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString("es-ES", {
    weekday: "short",
    day: "numeric",
    month: "short",
  });
};

// Status badge
const getStatusBadge = (status: string) => {
  const statusMap: Record<string, { class: string; label: string }> = {
    pending: { class: "portal-badge-pending", label: "Pendiente" },
    confirmed: { class: "portal-badge-confirmed", label: "Confirmada" },
    completed: { class: "portal-badge-completed", label: "Completada" },
    cancelled: { class: "portal-badge-cancelled", label: "Cancelada" },
  };
  return statusMap[status] || { class: "portal-badge-pending", label: status };
};

const now = new Date();

// Upcoming appointments
const upcomingAppointments = bookings.filter(
  (b) => new Date(b.booking_date) >= now && b.status !== "cancelled"
);

// Completed count
const completedCount = bookings.filter((b) => b.status === "completed").length;

// Top services
const allServices = bookings.flatMap((b) => b.services || []);
const serviceCount = allServices.reduce((acc, service) => {
  acc[service] = (acc[service] || 0) + 1;
  return acc;
}, {} as Record<string, number>);
const topServices = Object.entries(serviceCount)
  .sort(([, a], [, b]) => b - a)
  .slice(0, 3);
---

<div class="salon-theme">
  <h1 class="portal-page-title">Hola, {customer.name.split(" ")[0]}</h1>

  <!-- Stats -->
  <div class="portal-stats-grid">
    <div class="portal-stat-card">
      <div class="portal-stat-icon" style="background: linear-gradient(135deg, #ec4899, #db2777);">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </div>
      <div class="portal-stat-value">{upcomingAppointments.length}</div>
      <div class="portal-stat-label">Proximas citas</div>
    </div>

    <div class="portal-stat-card">
      <div class="portal-stat-icon" style="background: linear-gradient(135deg, #ec4899, #db2777);">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <div class="portal-stat-value">{completedCount}</div>
      <div class="portal-stat-label">Visitas totales</div>
    </div>
  </div>

  <!-- Upcoming appointments -->
  <div class="portal-section-header">
    <h2 class="portal-section-title">Proximas citas</h2>
    <a href="/mi-cuenta/reservas" class="portal-section-link">Ver todas</a>
  </div>

  {upcomingAppointments.length > 0 ? (
    <div class="portal-list">
      {upcomingAppointments.slice(0, 3).map((apt) => {
        const badge = getStatusBadge(apt.status);
        return (
          <div class="portal-list-item">
            <div class="portal-list-item-header">
              <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                {(apt.services || []).map((service) => (
                  <span class="salon-service-badge">{service}</span>
                ))}
              </div>
              <span class={`portal-badge ${badge.class}`}>{badge.label}</span>
            </div>
            <div class="portal-list-item-meta" style="margin-top: 0.75rem;">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: inline; margin-right: 0.25rem; vertical-align: middle;">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              {formatDate(apt.booking_date)} a las {apt.booking_time}
            </div>
          </div>
        );
      })}
    </div>
  ) : (
    <div class="portal-empty">
      <svg class="portal-empty-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      <p class="portal-empty-title">Sin citas programadas</p>
      <p class="portal-empty-text">Reserva tu proxima cita y luce increible.</p>
    </div>
  )}

  <!-- Top services -->
  {topServices.length > 0 && (
    <div style="margin-top: 2rem;">
      <div class="portal-section-header">
        <h2 class="portal-section-title">Tus servicios favoritos</h2>
      </div>
      <div class="portal-card">
        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
          {topServices.map(([service, count]) => (
            <div style="display: flex; align-items: center; justify-content: space-between;">
              <span class="salon-service-badge">{service}</span>
              <span style="font-size: 0.875rem; color: var(--ng-text-secondary);">
                {count} {count === 1 ? "vez" : "veces"}
              </span>
            </div>
          ))}
        </div>
      </div>
    </div>
  )}
</div>
