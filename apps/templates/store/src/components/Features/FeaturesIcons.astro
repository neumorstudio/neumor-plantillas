---
/**
 * FeaturesIcons - Variante con iconos grandes en fila horizontal
 * Ideal para: Fine Dining, restaurantes elegantes
 */
interface Feature {
  icon: string;
  title: string;
  description: string;
  link?: string;
}

interface Props {
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg>`,
    title: "Nuestra Carta",
    description: "Descubre nuestra seleccion de platos elaborados con ingredientes frescos y de temporada.",
    link: "#menu",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>`,
    title: "Lo Que Dicen",
    description: "Opiniones reales de nuestros clientes en redes sociales y plataformas.",
    link: "#reviews",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>`,
    title: "Reserva Tu Mesa",
    description: "Asegura tu lugar para una experiencia gastronomica inolvidable.",
    link: "#reserve",
  },
];

const { features = defaultFeatures } = Astro.props;
---

<section id="features" class="features-icons">
  <div class="features-container">
    {features.map((feature, index) => (
      <a
        href={feature.link || "#"}
        class="feature-item animate-fade-in-up"
        style={`animation-delay: ${index * 150}ms`}
      >
        <div class="icon-wrapper neumor-raised">
          <Fragment set:html={feature.icon} />
        </div>
        <h3 class="feature-title">{feature.title}</h3>
        <p class="feature-desc">{feature.description}</p>
      </a>
    ))}
  </div>
</section>

<style>
  .features-icons {
    padding: var(--section-padding);
    background: var(--background);
  }

  .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: center;
    gap: 4rem;
    flex-wrap: wrap;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    max-width: 280px;
    transition: transform 0.3s ease;
  }

  .feature-item:hover {
    transform: translateY(-8px);
  }

  .icon-wrapper {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--accent);
    transition: all 0.3s ease;
  }

  .feature-item:hover .icon-wrapper {
    color: var(--accent-hover, var(--accent));
    transform: scale(1.05);
  }

  .icon-wrapper :global(svg) {
    width: 40px;
    height: 40px;
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .feature-desc {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .features-container {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
    }
  }
</style>
