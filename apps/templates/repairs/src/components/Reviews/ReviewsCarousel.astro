/**
 * ReviewsCarousel - Variante carrusel horizontal
 * Ideal para: Casual, Fast Food
 */
interface Review {
  author: string;
  avatar?: string;
  platform: "google" | "instagram" | "facebook" | "tripadvisor";
  rating?: number;
  text: string;
  date: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  reviews?: Review[];
  googleRating?: number;
  totalReviews?: number;
}

