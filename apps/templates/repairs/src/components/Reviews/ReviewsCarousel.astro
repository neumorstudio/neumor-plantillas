const defaultReviews: Review[] = [
  { author: "Maria Garcia", platform: "google", rating: 5, text: "Una experiencia gastronomica increible. El solomillo Wellington estaba en su punto perfecto.", date: "Hace 2 dias" },
  { author: "Carlos Ruiz", platform: "tripadvisor", rating: 5, text: "Celebramos nuestro aniversario aqui y fue magico. El ambiente, la comida, todo perfecto.", date: "Hace 3 dias" },
  { author: "Laura Martinez", platform: "facebook", rating: 5, text: "Fuimos por recomendacion y no decepciono. El tartar de atun espectacular.", date: "Hace 5 dias" },
  { author: "Pedro Sanchez", platform: "google", rating: 4, text: "Muy buena comida y ambiente acogedor. Totalmente recomendable.", date: "Hace 1 semana" },
];

const {
  title = "Lo Que Dicen De Nosotros",
  subtitle = "Opiniones reales de clientes",
  reviews = defaultReviews,
  googleRating = 4.8,
  totalReviews = 324,
} = Astro.props;

function renderStars(rating: number): string {
  return Array(5).fill(0).map((_, i) => i < rating ? '<span class="star filled">★</span>' : '<span class="star">★</span>').join('');
}
---

<section id="reviews" class="reviews-carousel-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title" data-content="reviewsTitle">{title}</h2>
      <p class="section-subtitle" data-content="reviewsSubtitle">{subtitle}</p>
      <div class="rating-summary">
        <span class="rating-value">{googleRating}</span>
        <div class="stars" set:html={renderStars(Math.round(googleRating))} />
        <span class="total-reviews">({totalReviews} opiniones)</span>
      </div>
    </div>

    <div class="carousel-wrapper">
      <div class="carousel-track" id="reviews-track">
        {reviews.map((review) => {
          const platform = platformConfig[review.platform];
          return (
            <article class="review-slide neumor-card">
              <div class="slide-header">
                <div class="author-avatar">
                  <span>{review.author.charAt(0).toUpperCase()}</span>
                </div>
                <div class="author-info">
                  <span class="author-name">{review.author}</span>
                  {review.rating && <div class="slide-rating" set:html={renderStars(review.rating)} />}
                </div>
                <div class="platform-icon" style={`color: ${platform.color}`} set:html={platform.icon} />
              </div>
              <p class="slide-text">{review.text}</p>
              <span class="slide-date">{review.date}</span>
            </article>
          );
        })}
      </div>

      <button class="carousel-btn prev" id="prev-btn" aria-label="Anterior">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15,18 9,12 15,6"/></svg>
      </button>
      <button class="carousel-btn next" id="next-btn" aria-label="Siguiente">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9,18 15,12 9,6"/></svg>
      </button>
    </div>

    <div class="carousel-dots" id="carousel-dots"></div>
  </div>
</section>

<style>
  .reviews-carousel-section {
    padding: var(--section-padding);
    overflow: hidden;
  }

  .section-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .rating-summary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .rating-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .stars { display: flex; gap: 2px; }
  .star { color: #ddd; font-size: 1.1rem; }
  .star.filled { color: #fbbf24; }

  .total-reviews {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .carousel-wrapper {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .carousel-track {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding: 1rem 0;
  }

  .carousel-track::-webkit-scrollbar { display: none; }

  .review-slide {
    flex: 0 0 300px;
    scroll-snap-align: center;
    padding: 1.5rem;
    border-radius: 1rem;
  }

  .slide-header {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .author-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-hover, var(--accent)));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    flex-shrink: 0;
  }

  .author-info { flex: 1; }
  .author-name { font-weight: 600; color: var(--text-primary); display: block; }
  .slide-rating { margin-top: 0.25rem; }
  .slide-rating .star { font-size: 0.85rem; }

  .platform-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }
  .platform-icon :global(svg) { width: 100%; height: 100%; }

  .slide-text {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 0.75rem;
  }

  .slide-date {
    font-size: 0.8rem;
    color: var(--text-tertiary, var(--text-secondary));
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: none;
    background: var(--neumor-bg);
    box-shadow: 4px 4px 8px var(--shadow-dark), -4px -4px 8px var(--shadow-light);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    transition: all 0.3s ease;
    z-index: 10;
  }

  .carousel-btn:hover { color: var(--accent); }
  .carousel-btn svg { width: 24px; height: 24px; }
  .carousel-btn.prev { left: -60px; }
  .carousel-btn.next { right: -60px; }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
  }

  .carousel-dots :global(.dot) {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--text-secondary);
    opacity: 0.3;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .carousel-dots :global(.dot.active) {
    opacity: 1;
    background: var(--accent);
  }

  @media (max-width: 1024px) {
    .carousel-btn.prev { left: 10px; }
    .carousel-btn.next { right: 10px; }
  }

  @media (max-width: 640px) {
    .review-slide { flex: 0 0 85vw; }
    .carousel-btn { display: none; }
  }
</style>

<script>
  const track = document.getElementById('reviews-track');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const dotsContainer = document.getElementById('carousel-dots');

  if (track && prevBtn && nextBtn && dotsContainer) {
    const slides = track.querySelectorAll('.review-slide');
    const slideWidth = 300 + 24;

    slides.forEach((_, i) => {
      const dot = document.createElement('span');
      dot.className = `dot ${i === 0 ? 'active' : ''}`;
      dot.addEventListener('click', () => {
        track.scrollTo({ left: i * slideWidth, behavior: 'smooth' });
      });
      dotsContainer.appendChild(dot);
    });

    const dots = dotsContainer.querySelectorAll('.dot');

    prevBtn.addEventListener('click', () => {
      track.scrollBy({ left: -slideWidth, behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      track.scrollBy({ left: slideWidth, behavior: 'smooth' });
    });

    track.addEventListener('scroll', () => {
      const index = Math.round(track.scrollLeft / slideWidth);
      dots.forEach((dot, i) => dot.classList.toggle('active', i === index));
    });
  }
</script>
