---
import FeatureCard from "./FeatureCard.astro";

interface Feature {
  icon: string;
  title: string;
  description: string;
  link?: string;
}

interface Props {
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>`,
    title: "Entrenamiento 1-on-1",
    description: "Sesiones individuales 100% personalizadas adaptadas a tus objetivos y nivel de condicion fisica.",
    link: "#services",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>`,
    title: "Seguimiento Continuo",
    description: "Mediciones corporales, registro de progreso y PRs para ver tu evolucion real semana a semana.",
    link: "#progress",
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>`,
    title: "Reserva tu Sesion",
    description: "Elige el horario que mejor te convenga y asegura tu plaza para tu proximo entrenamiento.",
    link: "#booking",
  },
];

const { features = defaultFeatures } = Astro.props;
---

<section id="features" class="section">
  <div class="container">
    <div class="grid-cards">
      {
        features.map((feature, index) => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            link={feature.link}
            delay={(index + 1) * 100}
          />
        ))
      }
    </div>
  </div>
</section>
