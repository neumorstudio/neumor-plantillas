---
const {
  title = "Nuestras marcas de confianza",
  subtitle = "Trabajamos con marcas premium",
  logos = [],
  variant = "carousel",
} = Astro.props;

const safeLogos = Array.isArray(logos) ? logos.filter(Boolean) : [];
const hasLogos = safeLogos.length > 0;
const minVisibleLogos = 10;
const repeatTimes = hasLogos ? Math.ceil(minVisibleLogos / safeLogos.length) : 0;
const repeatedLogos = hasLogos
  ? Array.from({ length: repeatTimes }, () => safeLogos).flat()
  : [];
---

<section id="brands" class={`section brands-section brands-variant-${variant}`} data-section-id="brands">
  <div class="brands-inner">
    <div class="brands-header">
      <h2 data-content="brandsTitle">{title}</h2>
      <p data-content="brandsSubtitle">{subtitle}</p>
    </div>

    {hasLogos ? (
      <div class="brands-marquee" aria-label="Carrusel de marcas">
        <div class="brands-scroll" style={`--brands-count: ${repeatedLogos.length};`}>
          <div class="brands-track">
            {repeatedLogos.map((logo, index) => (
              <div class="brand-item" data-brand-logo={index}>
                <img src={logo} alt={`Logo ${index + 1}`} loading="lazy" />
              </div>
            ))}
          </div>
          <div class="brands-track" aria-hidden="true">
            {repeatedLogos.map((logo, index) => (
              <div class="brand-item" data-brand-logo={index + repeatedLogos.length}>
                <img src={logo} alt="" loading="lazy" />
              </div>
            ))}
          </div>
        </div>
      </div>
    ) : (
      <div class="brands-empty neumor-inset">
        <p>Anade logos desde Personalizacion.</p>
      </div>
    )}
  </div>
</section>

<style>
  .brands-section {
    padding: 4rem 0;
  }

  .brands-inner {
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .brands-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .brands-header h2 {
    font-size: clamp(1.6rem, 2vw, 2.4rem);
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .brands-header p {
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .brands-marquee {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
    padding: 0.75rem 0;
    background: transparent;
    box-shadow: none;
    mask-image: none;
  }

  .brands-scroll {
    display: flex;
    width: max-content;
    animation: brands-scroll 16s linear infinite;
  }

  .brands-scroll:hover {
    animation-play-state: paused;
  }

  .brands-track {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    width: max-content;
    padding: 0 2.5rem;
    flex-shrink: 0;
  }

  .brand-item {
    flex: 0 0 auto;
    width: 140px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    border-radius: 0;
    background: transparent;
    box-shadow: none;
  }

  .brand-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: grayscale(1);
    opacity: 0.85;
    transition: filter 0.25s ease, opacity 0.25s ease, transform 0.25s ease;
  }

  .brand-item:hover img {
    filter: grayscale(0);
    opacity: 1;
    transform: scale(1.04);
  }

  .brands-empty {
    padding: 1.5rem;
    text-align: center;
    color: var(--text-secondary);
    border-radius: 16px;
    font-size: 0.95rem;
  }

  @keyframes brands-scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  /* Variants */
  .brands-variant-minimal .brands-marquee {
    padding: 0.35rem 0;
    border-radius: 0;
  }

  .brands-variant-minimal .brands-scroll {
    animation-duration: 12s;
  }

  .brands-variant-minimal .brands-track {
    gap: 2rem;
    padding: 0 2rem;
  }

  .brands-variant-minimal .brand-item {
    width: 120px;
    height: 56px;
  }

  .brands-variant-grid .brands-marquee {
    overflow: visible;
    padding: 0;
  }

  .brands-variant-grid .brands-scroll {
    animation: none;
    width: 100%;
  }

  .brands-variant-grid .brands-track {
    width: 100%;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem 2.5rem;
    padding: 0;
  }

  .brands-variant-grid .brands-track[aria-hidden="true"] {
    display: none;
  }

  .brands-variant-grid .brand-item {
    width: 140px;
    height: 70px;
  }

  .brands-variant-cards .brands-marquee {
    padding: 1rem 0;
    border-radius: 18px;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
  }

  .brands-variant-cards .brand-item {
    width: 150px;
    height: 78px;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.2);
  }

  .brands-variant-cards .brand-item img {
    filter: none;
    opacity: 1;
  }

  @media (prefers-reduced-motion: reduce) {
    .brands-scroll {
      animation: none;
    }
    .brands-marquee {
      overflow-x: auto;
      mask-image: none;
    }
  }

  @media (max-width: 768px) {
    .brand-item {
      width: 120px;
      height: 64px;
    }

    .brand-item img {
      width: 100%;
      height: 100%;
    }
  }
</style>
