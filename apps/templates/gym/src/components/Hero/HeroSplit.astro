---
/**
 * HeroSplit - Split screen hero layout.
 */
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
  eyebrow?: string;
}

const {
  title,
  subtitle,
  ctaText = "Reservar Sesion",
  ctaLink = "#booking",
  backgroundImage,
  eyebrow,
} = Astro.props;

const titleWords = title.split(" ");
---

<section class="hero-split">
  <div class="hero-image-side">
    {backgroundImage && (
      <img src={backgroundImage} alt="" class="hero-image" loading="eager" />
    )}
    <div class="image-overlay"></div>

    <div class="deco-line deco-line-1"></div>
    <div class="deco-line deco-line-2"></div>
  </div>

  <div class="hero-content-side">
    <div class="hero-content">
      {eyebrow && (
        <span class="hero-eyebrow animate-slide-right">{eyebrow}</span>
      )}

      <h1 class="hero-title">
        {titleWords.map((word, i) => (
          <span
            class="title-line animate-slide-right"
            style={`animation-delay: ${0.2 + i * 0.15}s`}
          >
            {word}
          </span>
        ))}
      </h1>

      <p class="hero-subtitle animate-fade-in">{subtitle}</p>

      <a href={ctaLink} class="hero-cta animate-fade-in animation-delay-600">
        <span class="cta-text" data-content="heroCta">{ctaText}</span>
        <span class="cta-arrow">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </a>
    </div>

    <div class="scroll-hint">
      <span class="scroll-line"></span>
    </div>
  </div>
</section>

<style>
  .hero-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    min-height: 100dvh;
  }

  .hero-image-side {
    position: relative;
    overflow: hidden;
    background: var(--shadow-dark);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    transition: transform 8s ease-out;
  }

  .hero-split:hover .hero-image {
    transform: scale(1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
  }

  .deco-line {
    position: absolute;
    background: var(--accent);
    opacity: 0.8;
  }

  .deco-line-1 {
    width: 60%;
    height: 3px;
    bottom: 20%;
    right: 0;
    transform: translateX(50%);
  }

  .deco-line-2 {
    width: 3px;
    height: 40%;
    top: 10%;
    right: 20%;
  }

  .hero-content-side {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 4rem;
    background: var(--neumor-bg);
    position: relative;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 2rem;
  }

  .hero-eyebrow::before {
    content: '';
    width: 40px;
    height: 2px;
    background: var(--accent);
  }

  .hero-title {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-bottom: 2rem;
  }

  .title-line {
    display: block;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 800;
    line-height: 1;
    color: var(--text-primary);
    letter-spacing: -0.03em;
    text-transform: uppercase;
  }

  .title-line:nth-child(even) {
    color: var(--accent);
  }

  .hero-subtitle {
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2.5rem;
    background: var(--accent);
    color: white;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.75rem;
    transition: all 0.3s ease;
  }

  .hero-cta:hover {
    transform: translateX(10px);
    filter: brightness(1.1);
  }

  .cta-arrow {
    display: inline-flex;
  }

  .cta-arrow svg {
    width: 18px;
    height: 18px;
  }

  .scroll-hint {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    width: 60px;
    height: 2px;
    background: var(--text-secondary);
    opacity: 0.3;
    overflow: hidden;
  }

  .scroll-line {
    position: absolute;
    width: 30px;
    height: 100%;
    background: var(--accent);
    animation: scrollLine 2s ease-in-out infinite;
  }

  @keyframes scrollLine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(200%); }
  }

  @media (max-width: 900px) {
    .hero-split {
      grid-template-columns: 1fr;
    }

    .hero-image-side {
      min-height: 50vh;
    }

    .hero-content-side {
      padding: 3rem 2rem;
    }
  }
</style>
